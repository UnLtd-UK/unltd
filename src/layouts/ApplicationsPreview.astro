---
import Layout from "../layouts/Layout.astro";
const { name, description, application, applications } = Astro.props;
---

<Layout name={name} description={description}>
  <div class="">
    <div
      class="mx-auto max-w-7xl py-16 px-4 sm:py-24 sm:px-6 flex lg:justify-between lg:px-8"
    >
      <div class="max-w-xl">
        <h2
          class="text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl"
        >
          {name}
        </h2>
        <p class="mt-5 text-xl text-violet-400">
          {description}
        </p>
      </div>
      <div class="mt-10 w-full max-w-xs">
        <label for="currency" class="block text-base font-medium text-white"
          >How long has your venture been selling goods or/and services?</label
        >
        <div class="relative mt-1.5">
          <select
            id="currency"
            name="currency"
            class="block w-full appearance-none rounded-md border border-transparent bg-gray-200 bg-none py-2 pl-3 pr-10 text-base text-gray-800 focus:border-violet-800 focus:outline-none focus:ring-1 focus:ring-violet-800 sm:text-sm"
          >
            <option selected>-- Select an option --</option>
            {
              applications.map((app) => {
                <option>{app}</option>;
              })
            }
          </select>
          <div
            class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2"
          >
            <svg
              class="h-4 w-4 text-gray-800"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z"
                clip-rule="evenodd"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
  <slot />
</Layout>
