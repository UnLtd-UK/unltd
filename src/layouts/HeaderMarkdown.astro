---
import Layout from "./Layout.astro";
import Container from "./Container.astro";
const { frontmatter } = Astro.props;
---

<Layout name={frontmatter.name} description={frontmatter.description}>
  <div
    class="bg-gradient-to-br from-gray-900 via-violet-900 to-amber-700 mb-10"
  >
    <Container>
      <div class="py-14 flex flex-col gap-12">
        <div class="flex flex-row gap-5 justify-between">
          <nav class="flex" aria-label="Breadcrumb">
            <ol role="list" class="flex items-center space-x-4">
              <li>
                <div>
                  <a
                    href="/"
                    class="hover:text-violet-200 text-violet-300 transition"
                  >
                    <i class="fa-solid fa-house text-xs"></i>
                    <span class="sr-only">UnLtd</span>
                  </a>
                </div>
              </li>

              {
                frontmatter.breadcrumbs.map((crumb) => (
                  <li>
                    <div class="flex items-center">
                      <i class="fa-solid fa-chevron-right text-violet-300 text-xs" />
                      <a
                        href={crumb.slug}
                        class="ml-4 text-xs font-medium hover:text-violet-200 text-violet-300 transition"
                      >
                        {crumb.name}
                      </a>
                    </div>
                  </li>
                ))
              }
            </ol>
          </nav>

          {
            frontmatter.reviewed && (
              <div class="flex flex-row gap-10">
                {frontmatter.updated && (
                  <div>
                    <p class="text-violet-300 text-xs">Updated</p>
                    <p class="text-violet-300 text-sm">
                      {new Date(frontmatter.updated).toLocaleDateString()}
                    </p>
                  </div>
                )}

                {frontmatter.reviewed && (
                  <div>
                    <p class="text-violet-300 text-xs">Reviewed</p>
                    <p class="text-violet-300 text-sm">
                      {new Date(frontmatter.reviewed).toLocaleDateString()}
                    </p>
                  </div>
                )}
              </div>
            )
          }
        </div>

        <div class="max-w-4xl flex flex-col gap-3">
          <div class="flex flex-col gap-1">
            <h2
              class="text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl"
            >
              {frontmatter.name}
            </h2>
            <p class="text-2xl text-violet-300">
              {frontmatter.description}
            </p>
          </div>
        </div>

        {
          frontmatter.primaryButton && (
            <div class="flex flex-row">
              <div class="inline-flex rounded-md shadow">
                {frontmatter.primaryButton && (
                  <a
                    target={
                      frontmatter.primaryButton.url.startsWith("https://") &&
                      "_blank"
                    }
                    href={frontmatter.primaryButton.url}
                    class="inline-flex items-center justify-center rounded-full border border-transparent bg-violet-600 px-5 py-3 text-base font-medium text-white hover:bg-violet-700"
                  >
                    {frontmatter.primaryButton.text}
                  </a>
                )}
              </div>
              <div class="ml-3 inline-flex">
                {frontmatter.secondaryButton && (
                  <a
                    href={frontmatter.secondaryButton.url}
                    class="inline-flex items-center justify-center rounded-full border border-transparent bg-violet-100 px-5 py-3 text-base font-medium text-violet-700 hover:bg-violet-200"
                  >
                    {frontmatter.secondaryButton.text}
                  </a>
                )}
              </div>
            </div>
          )
        }
      </div>
    </Container>
  </div>
  <Container>
    <div
      class="prose prose-lg prose-black prose-invert prose-img:rounded-md prose-img:shadow-md prose-img:w-full hover:prose-a:text-white prose-a:text-violet-300"
    >
      <slot />
    </div>
  </Container>
</Layout>
