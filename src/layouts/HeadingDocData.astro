  <div class="relative overflow-hidden py-10">
    <div class="mx-auto max-w-prose text-lg">
      <div class="flex flex-row justify-between gap-5 basis-7/12">
        <h1>
          <span
            class="mt-2 block text-3xl font-bold leading-8 tracking-tight text-white sm:text-5xl"
            >{frontmatter.name}</span
          >
        </h1>

        <div class="flex flex-row gap-10 basis-5/12">
          <div>
            <p class="text-violet-300 text-xs">Updated</p>
            <p class="text-white text-sm">
              {new Date(frontmatter.updated).toLocaleDateString()}
            </p>
          </div>

          <div>
            <p class="text-violet-300 text-xs">Reviewed</p>
            <p class="text-white text-sm">
              {new Date(frontmatter.reviewed).toLocaleDateString()}
            </p>
          </div>
        </div>
      </div>

      {
        frontmatter.description && (
          <p class="mt-8 text-xl leading-8 text-violet-300">
            {frontmatter.description}
          </p>
        )
      }
    </div>
  </div>

  <div class="mx-auto max-w-prose text-lg">
    <div class="relative">
      <div class="absolute inset-0 flex items-center" aria-hidden="true">
        <div class="w-full border-t border-violet-300"></div>
      </div>
    </div>
