---
const { name, description } = Astro.props.frontmatter || Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth h-full">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="image/jpg" href="/favicon.svg" />

    <!-- Primary Meta Tags -->
    <title>{`${name} | UnLtd`}</title>
    <meta name="title" content={`${name} | UnLtd`} />
    <meta name="description" content={`${description}`} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="" />
    <meta property="og:url" content="" />
    <meta property="og:title" content={`${name} | UnLtd`} />
    <meta property="og:description" content={`${description}`} />
    <meta property="og:image" content="" />

    <!-- Twitter -->
    <meta property="twitter:card" content="" />
    <meta property="twitter:url" content="" />
    <meta property="twitter:title" content={`${name} | UnLtd`} />
    <meta property="twitter:description" content={`${description}`} />
    <meta property="twitter:image" content="" />

    <!-- Fontawesome Icons -->
    <script
      src="https://kit.fontawesome.com/0ff725f684.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body class="">
    <div
      class="flex flex-col justify-between h-full bg-gradient-to-b from-violet-900 to-slate-900 text-slate-50"
    >
      <Header />
      <div class="mb-10">
        <slot />
      </div>
      <Footer />
    </div>
  </body>
</html>
