---
const {
  name,
  description,
  colour = "bg-violet-950",
} = Astro.props.frontmatter || Astro.props;
import { programmeColours } from "../data/programmeColours.js";
import Header from "../components/ui/Header.jsx";
import Footer from "../components/Footer.astro";

import "@fontsource-variable/montserrat";

// import Nav from "../components/old-nav/Nav.astro";
---

<!doctype html>
<html lang="en" class="scroll-smooth h-full">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="image/jpg" href="/favicon.ico" />

    <script
      defer
      data-domain="unltd.org.uk"
      src="https://plausible.io/js/script.js"></script>

    <!-- Primary Meta Tags -->
    <title>{`${name} | UnLtd`}</title>
    <meta
      name="title"
      content={name ? `${name} | UnLtd` : `No page description | UnLtd`}
    />
    <meta
      name="description"
      content={description ? description : "No page description"}
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="" />
    <meta property="og:url" content="" />
    <meta
      property="og:title"
      content={name ? `${name} | UnLtd` : `No page description | UnLtd`}
    />
    <meta
      property="og:description"
      content={description ? description : "No page description"}
    />
    <meta property="og:image" content="" />

    <!-- Twitter -->
    <meta property="twitter:card" content="" />
    <meta property="twitter:url" content="" />
    <meta
      property="twitter:title"
      content={name ? `${name} | UnLtd` : `No page description | UnLtd`}
    />
    <meta
      property="twitter:description"
      content={description ? description : "No page description"}
    />
    <meta property="twitter:image" content="" />

    <!-- Fontawesome Icons -->
    <script
      src="https://kit.fontawesome.com/0ff725f684.js"
      crossorigin="anonymous"></script>
  </head>
  <body class={`bg-violet-50 dark:${colour} dark`}>
    <div class="flex flex-col justify-between h-full">
      <Header client:load />
      <!-- <Nav /> -->
      <div>
        <slot />
      </div>
      <Footer />
    </div>
  </body>
</html>
