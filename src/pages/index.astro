import { home } from "@data/home.js";
const name = "Home";
const description = "Home description";
---

<Template name={name} description={description}>
  <MainHero data={home} />
  <Mission data={home} />
  <div class="bg-violet-950 py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:text-center">
        <h2 class="text-base/7 font-semibold text-violet-400">Funding</h2>
        <p
          class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-violet-100 sm:text-5xl lg:text-balance"
        >
