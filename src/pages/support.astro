---
import Template from "../layouts/Layout.astro";

import Showcase from "../components/Showcase.astro";
import Quote from "../components/Quote.astro";
import Badge from "../components/Badge.astro";
import Tabs from "../components/Tabs.astro";
import Mention from "../components/Mention.astro";
import Tabs2 from "../components/Tabs2.astro";

import organisations from "../data/organisations.json";
import events from "../data/events.json";
import quotes from "../data/quotes.json";
import users from "../data/users.json";
import funds from "../data/funds.json";

import categories from "../data/support/categories.json";
import topics from "../data/support/topics.json";
import pathways from "../data/support/pathways.json";

import experts from "../data/experts/experts.json";

const name = "Support";
const description =
  "Lorem ipsum dolor sit amet consectetur, adipisicing elit. Mollitia dolores corrupti labore tempora, rem quidem maximead asperiores eveniet maiores nobis assumenda facilis quisquam fugiat accusamus nulla similique tenetur hic?";
---

<Template name="{ `${name}` }" description="{ `${description}` }">

  <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div class="flex flex-col gap-10">
      <div class="rounded-md bg-blue-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <!-- Heroicon name: mini/information-circle -->
            <svg
              class="h-5 w-5 text-blue-400"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d="M19 10.5a8.5 8.5 0 11-17 0 8.5 8.5 0 0117 0zM8.25 9.75A.75.75 0 019 9h.253a1.75 1.75 0 011.709 2.13l-.46 2.066a.25.25 0 00.245.304H11a.75.75 0 010 1.5h-.253a1.75 1.75 0 01-1.709-2.13l.46-2.066a.25.25 0 00-.245-.304H9a.75.75 0 01-.75-.75zM10 7a1 1 0 100-2 1 1 0 000 2z"
                clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="ml-3 flex-1 md:flex md:justify-between">
            <p class="text-sm text-blue-700">
              You must have funding to access UnLtd Support
            </p>
            <p class="mt-3 text-sm md:mt-0 md:ml-6">
              <a
                href="#"
                class="whitespace-nowrap font-medium text-blue-700 hover:text-blue-600"
              >
                Go to Grants
                <span aria-hidden="true"> &rarr;</span>
              </a>
            </p>
          </div>
        </div>
      </div>
      <div class="flex flex-col gap-5">
        <h1 class="text-8xl font-bold">{name}</h1>
        <p class="text-2xl">{description}</p>
        <div class="flex gap-10 text-xl">
          <p class="font-bold">UK-wide</p>
          <p class="font-bold">Free</p>
          <p class="font-bold">Available for 1 year</p>
        </div>
      </div>

      <div class="flex gap-10">
        <Mention name="Your manager" description="Your coach who will help you navigate our topics and find the best resources, events and experts" items={users}></Mention>

        <Mention name="Your peers" description="You are not alone, there are Social Entrepreneurs who are on the same journey with you and who you will connect with at our events" items={users}></Mention>

        <Mention name="Your experts" description="We have partnered with" items={users}></Mention>
      </div>

    </div>

    <div class="bg-white flex flex-col text-black p-10 rounded-xl">
      <div class="border-b border-gray-200 pb-5 sm:pb-0">
        <h2 class="text-lg font-medium leading-6 text-gray-900">
          Explore our topics
        </h2>
        <p>Pick and mix from our topics to grow you and your venture.</p>
        <Tabs
          parentItems={categories}
          childrenItems={topics}
          pathways={pathways}
        />
      </div>
    </div>
  </div>

