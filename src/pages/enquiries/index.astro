---
import Template from "../../layouts/Template.astro";
import Container from "../../components/Container.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";

const name = "Enquiries";
const slug = "enquiries";
const description = "Contact us";
const breadcrumbs = [
  {
    name: name,
    slug: slug,
  },
];
---

<Template name={name} description={description}>
  <Container>
    <Breadcrumbs breadcrumbs={breadcrumbs} />
    <div
      class="isolate bg-slate-50 dark:bg-slate-950 px-6 py-24 sm:py-32 lg:px-8"
    >
      <div class="mx-auto max-w-2xl sm:text-center">
        <h2
          class="text-3xl font-bold tracking-tight text-slate-900 dark:text-slate-100 sm:text-4xl"
        >
          Enquiries
        </h2>
        <p class="mt-2 text-lg leading-8 text-slate-600 dark:text-slate-300">
          Get in touch, we're here to help
        </p>
      </div>
      <div class="mx-auto mt-20 max-w-lg space-y-16">
        <div class="flex gap-x-6">
          <div
            class="flex h-10 w-10 shrink-0 items-center justify-center rounded-lg outline outline-offset-2 outline-slate-300 dark:outline-slate-700"
          >
            <i class=`text-slate-800 dark:text-slate-200 fa-solid fa-award`></i>
          </div>
          <div>
            <h3
              class="text-base font-semibold leading-7 text-slate-800 dark:text-slate-200"
            >
              Award enquiry
            </h3>
            <p class="mt-2 leading-7 text-slate-700 dark:text-slate-400">
              Interested in an Award or need specifics on the nomination
              process? Our Award Enquiries form is the first step to all the
              details and support you need for our accolades.
            </p>
            <p class="mt-4">
              <a
                href="/enquiries/award-enquiry"
                class="text-sm font-semibold leading-6 text-amber-600"
                >Enquire <span aria-hidden="true">&rarr;</span></a
              >
            </p>
          </div>
        </div>
        <div class="flex gap-x-6">
          <div
            class="flex h-10 w-10 shrink-0 items-center justify-center rounded-lg outline outline-offset-2 outline-slate-300 dark:outline-slate-700"
          >
            <i class=`text-slate-800 dark:text-slate-200 fa-solid fa-messages`
            ></i>
          </div>
          <div>
            <h3
              class="text-base font-semibold leading-7 text-slate-800 dark:text-slate-200"
            >
              General enquiry
            </h3>
            <p class="mt-2 leading-7 text-slate-700 dark:text-slate-400">
              Got questions or need further information? Fill out our General
              Enquiries form, and we'll get back to you with all the answers you
              need to keep moving forward.
            </p>
            <p class="mt-4">
              <a
                href="/enquiries/general-enquiry"
                class="text-sm font-semibold leading-6 text-amber-600"
                >Enquire <span aria-hidden="true">&rarr;</span></a
              >
            </p>
          </div>
        </div>
        <div class="flex gap-x-6">
          <div
            class="flex h-10 w-10 shrink-0 items-center justify-center rounded-lg outline outline-offset-2 outline-slate-300 dark:outline-slate-700"
          >
            <i class=`text-slate-800 dark:text-slate-200 fa-solid fa-megaphone`
            ></i>
          </div>
          <div>
            <h3
              class="text-base font-semibold leading-7 text-slate-800 dark:text-slate-200"
            >
              Press and media enquiry
            </h3>
            <p class="mt-2 leading-7 text-slate-700 dark:text-slate-400">
              For press releases, media partnerships, or interviews, our Press
              and Media Enquiries form is your direct line to the latest news
              and media resources. Get in touch, and let's make headlines
              together.
            </p>
            <p class="mt-4">
              <a
                href="/enquiries/press-and-media-enquiry"
                class="text-sm font-semibold leading-6 text-amber-600"
                >Enquire <span aria-hidden="true">&rarr;</span></a
              >
            </p>
          </div>
        </div>
      </div>
    </div>
  </Container>
</Template>
