---
import Template from "../../layouts/Template.astro";
import Container from "../../components/Container.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import Form from "../../components/Form.astro";
const name = "Award enquiry";
const description =
  "Interested in our awards or need specifics on the nomination process? Our Award Enquiries form is the first step to all the details and support you need for our accolades.";
const email = "awardapplications@unltd.org.uk";
const icon = "award";
const breadcrumbs = [
  {
    name: "Enquiries",
    slug: "/enquiries",
  },
  {
    name: "Award enquiry",
    slug: "/enquiries/award-enquiry",
  },
];

const fields = [
  { component: "Input", name: "Full name", type: "text", required: true },
  { component: "Input", name: "Email", type: "email", required: true },
  { component: "Input", name: "Phone number", type: "tel", required: false },
  { component: "Input", name: "Subject", type: "text", required: true },
  {
    component: "Select",
    name: "Support",
    required: true,
    options: [
      { name: "Pre-application" },
      { name: "Application" },
      { name: "Post-application" },
    ],
  },
  { component: "Textarea", name: "Message", rows: "4", required: true },
];
---

<Template name={name} description={description}>
  <Container>
    <Breadcrumbs breadcrumbs={breadcrumbs} />
  </Container>
  <Form
    name={name}
    description={description}
    email={email}
    icon={icon}
    fields={fields}
  />
</Template>
