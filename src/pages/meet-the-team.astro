  <div class="py-24 sm:py-32">
    <div
      class="mx-auto grid max-w-7xl gap-x-8 gap-y-20 px-6 lg:px-8 xl:grid-cols-3"
    >
      <div class="max-w-2xl">
        <h2 class="text-3xl font-bold tracking-tight text-gray-200 sm:text-4xl">
          Leadership
        </h2>
        <p class="mt-6 text-lg leading-8 text-violet-300">
          Libero fames augue nisl porttitor nisi, quis. Id ac elit odio vitae
          elementum enim vitae ullamcorper suspendisse.
        </p>
      </div>

      <ul
        role="list"
        class="grid gap-x-8 gap-y-12 sm:grid-cols-2 sm:gap-y-16 xl:col-span-2"
      >
        {
          positions
            .filter((position) => position.team.name === "Leadership")
            .map((position) => (
              <li>
                <div class="flex items-center gap-x-6">
                  <img
                    class="h-16 w-16 rounded-full"
                    src={position.person.image ? "" : "/img/profile.webp"}
                    alt=""
                  />
                  <div>
                    <div class="flex gap-2 items-center">
                      <h3 class="text-base font-semibold leading-7 tracking-tight text-gray-200">
                        {position.person.name}
                      </h3>
                      <span class="text-xs text-violet-200">
                        {position.person.pronouns}
