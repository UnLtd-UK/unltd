---
import Blank from "../layouts/Blank.astro";
// import List from "../components/List.astro";
import { positions } from "../data/directus/positions.js";

const name = "Meet the Team";
const description =
  "Our people believe in social entrepreneurs and know how best to support them on their journeys";
const breadcrumbs = [
  {
    name: "Meet the Team",
    slug: "meet-the-team",
  },
];
