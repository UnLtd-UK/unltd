---
import Blank from "../layouts/Blank.astro";
import Team from "../components/Team.astro";
import { positions } from "../data/directus/positions.js";

const name = "Meet the Team";
const description =
  "Our people are passionate about breaking down the barriers faced by social entrepreneurs and delivering market leading support to grow their impact";

const breadcrumbs = [
  {
    name: "Meet the Team",
    slug: "meet-the-team",
  },
];
