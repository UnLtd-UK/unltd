---
// PROPS
const props = {
    name: "Application Rounds",
    slug: "/awards",
    description:
        "You have an idea, or you are already creating a positive social impact with your venture and are looking to develop. We combine funding and support specifically tailored to you. We'll help get you started or to grow.",
};

const breadcrumbs = [
    {
        name: "Awards",
        path: "/awards",
    },
    {
        name: "Application Rounds",
        path: "/awards1/application-rounds",
    },
];

// LAYOUT
import Template from "@layouts/Template.astro";
import Container from "@components/Container.astro";
import Breadcrumbs from "@components/Breadcrumbs.astro";

const applicationRounds = [
    {
        opensDate: "1 October 2025",
        closesDate: "15 December 2025",
        assessmentStart: "10 January 2026",
        assessmentEnd: "20 March 2026",
        resultsStart: "23 March 2026",
        resultsEnd: "30 March 2026",
        applicationLimit: 650,
        capacityPercentage: 80,
    },
    {
        opensDate: "6 January 2026",
        closesDate: "15 March 2026",
        assessmentStart: "10 April 2026",
        assessmentEnd: "20 June 2026",
        resultsStart: "22 June 2026",
        resultsEnd: "4 July 2026",
        applicationLimit: 650,
        capacityPercentage: 0,
    },
];

const beforeSteps = [
    {
        step: "1",
        title: "Check Eligibility",
        description:
            "Use our eligibility checker to confirm you meet all criteria.",
    },
    {
        step: "2",
        title: "Preview Application",
        description:
            "Download a copy to understand what's required and draft your answers.",
        linkLabel: "Download preview",
        linkHref:
            "https://preview.unltd.org.uk/awards/%7B%7Bfield:96903b7a-854c-4d72-8af6-9fa0f6bec0ad%7D%7D",
        linkIcon: "fa-solid fa-download",
    },
    {
        step: "3",
        title: "Prepare Your Budget",
        description:
            "Learn what you can include and how to present your Award budget.",
        linkLabel: "Budget guidance",
        linkHref:
            "https://preview.unltd.org.uk/resources/award-budget-guidance",
        linkIcon: "fa-regular fa-file-lines",
    },
    {
        step: "4",
        title: "Submit Application",
        description:
            "Complete and submit through our online portal before the round closes.",
    },
];

const assessmentStages = [
    {
        title: "Suitability Check",
        description:
            "Reviewed against social impact, inclusion, and financial sustainability.",
        icon: "fa-solid fa-shield",
    },
    {
        title: "Peer Review",
        description:
            "Support Managers discuss your application; strong ones go to panel.",
        icon: "fa-solid fa-people-group",
    },
    {
        title: "Panel Meeting",
        description:
            "Discuss your application with staff and experienced entrepreneurs.",
        icon: "fa-solid fa-chalkboard-user",
        linkLabel: "Panel Meeting Guide",
        linkHref: "#",
    },
    {
        title: "Committee Approval",
        description:
            "Recommendations go to the Awards Committee for final approval.",
        icon: "fa-solid fa-user-check",
    },
];

const successList = [
    "Welcome pack with information about joining your cohort",
    "Budget & reporting guidance to help you manage your Award",
    "Support Manager introduction to begin your journey",
];

const unsuccessfulList = [
    "Feedback on your application to help you improve",
    "Resources to continue developing your venture",
    "Encouragement to reapply in a future round",
];

const parseDate = (dateString) =>
    new Date(dateString.replace(/(\d+)\s+(\w+)\s+(\d+)/, "$2 $1, $3"));

const getRoundStatus = (round) => {
    const now = new Date();
    const opensDate = parseDate(round.opensDate);
    const closesDate = parseDate(round.closesDate);
    const percentage = round.capacityPercentage;
    if (percentage === 100) {
        return {
            status: "full",
            label: "Round Full",
            description:
                "This round has reached capacity. Your application will be assessed in the next round.",
            badgeClass: "bg-slate-100 text-slate-600 border-slate-200",
            indicatorClass: "bg-slate-400",
            percentage: 100,
        };
    }

    if (now >= opensDate && now <= closesDate) {
        if (percentage >= 80) {
            return {
                status: "almost-full",
                label: "Almost Full",
                description:
                    "Very limited spots remaining. Apply now to be assessed in this round.",
                badgeClass: "bg-red-100 text-red-700 border-red-200",
                indicatorClass: "bg-red-500",
                percentage,
            };
        }

        if (percentage >= 60) {
            return {
                status: "filling-up",
                label: "Filling Up",
                description:
                    "Limited spots remaining. Apply soon to secure your place in this round.",
                badgeClass: "bg-amber-100 text-amber-700 border-amber-200",
                indicatorClass: "bg-amber-500",
                percentage,
            };
        }

        return {
            status: "open",
            label: "Accepting Applications",
            description: "Plenty of spots available in this round.",
            badgeClass: "bg-emerald-100 text-emerald-700 border-emerald-200",
            indicatorClass: "bg-emerald-500",
            percentage,
        };
    }

    if (now < opensDate) {
        return {
            status: "upcoming",
            label: "Upcoming",
            description: `Opens ${round.opensDate}.`,
            badgeClass: "bg-violet-100 text-violet-700 border-violet-200",
            indicatorClass: "bg-violet-400",
            percentage: 0,
        };
    }

    return {
        status: "closed",
        label: "Closed",
        description: "This application round has closed.",
        badgeClass: "bg-slate-100 text-slate-600 border-slate-200",
        indicatorClass: "bg-slate-400",
        percentage: 100,
    };
};

const getCapacityLabel = (percentage) => {
    if (percentage === 0) return "Empty";
    if (percentage === 100) return "Full";
    return `${percentage}% Full`;
};

const progressThresholds = [20, 40, 60, 80, 100];

const currentRoundStatus = getRoundStatus(applicationRounds[0]);
---

<Template name={props.name} description={props.description}>
    <Container>
        <Breadcrumbs breadcrumbs={breadcrumbs} />
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <span
                    class="inline-flex items-center rounded-full bg-violet-100 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-violet-700"
                >
                    Application Timeline
                </span>
                <h2
                    class="text-3xl md:text-4xl font-bold text-foreground mb-4 text-balance text-violet-50"
                >
                    When to Apply
                </h2>
                <p
                    class="text-lg text-muted-foreground max-w-2xl mx-auto text-violet-50"
                >
                    We assess applications in terms. When you submit affects
                    when you'll receive a decision. Plan your application around
                    these rounds.
                </p>
            </div>

            <div
                class="bg-violet-100 border border-violet-200 rounded-xl p-4 mb-8 flex items-start gap-3"
            >
                <i class="fa-solid fa-users h-5 w-5 text-violet-800 mt-0.5"></i>
                <div>
                    <p class="font-semibold text-violet-900">
                        Each application round is limited to 650 applications
                    </p>
                    <p class="text-sm text-violet-700 mt-1">
                        Once a round reaches capacity, any new applications will
                        automatically be placed into the next available round.
                        Apply early to secure your spot in your preferred
                        assessment period.
                    </p>
                </div>
            </div>

            <div class="bg-violet-900 text-white rounded-2xl p-8 mb-12">
                <div class="flex flex-col gap-6">
                    <div
                        class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4"
                    >
                        <div class="flex-1">
                            <span
                                class="inline-flex items-center rounded-full bg-violet-500 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-white mb-4"
                                >Current Round</span
                            >
                            <h3 class="text-2xl font-bold mb-2">
                                October 2025 Application Round
                            </h3>
                            <p class="text-violet-300">
                                Applications are open now. Submit your
                                application before 15 December 2025 to be
                                assessed in this round.
                            </p>
                        </div>

                        <div class="lg:w-72 shrink-0">
                            <div
                                class={`rounded-xl p-4 ${
                                    currentRoundStatus.status === "full"
                                        ? "bg-slate-500/20 border border-slate-400/30"
                                        : currentRoundStatus.status ===
                                            "almost-full"
                                          ? "bg-red-500/20 border border-red-400/30"
                                          : currentRoundStatus.status ===
                                              "filling-up"
                                            ? "bg-amber-500/20 border border-amber-400/30"
                                            : "bg-emerald-500/20 border border-emerald-400/30"
                                }`}
                            >
                                <div class="flex items-center gap-2 mb-3">
                                    <span
                                        class={`h-3 w-3 rounded-full ${currentRoundStatus.status !== "full" ? "animate-pulse" : ""} ${currentRoundStatus.indicatorClass}`}
                                    ></span>
                                    <span
                                        class={`text-sm font-semibold ${
                                            currentRoundStatus.status === "full"
                                                ? "text-slate-300"
                                                : currentRoundStatus.status ===
                                                    "almost-full"
                                                  ? "text-red-300"
                                                  : currentRoundStatus.status ===
                                                      "filling-up"
                                                    ? "text-amber-300"
                                                    : "text-emerald-300"
                                        }`}
                                    >
                                        {currentRoundStatus.label}
                                    </span>
                                </div>

                                {
                                    currentRoundStatus.status !== "full" ? (
                                        <div class="space-y-2">
                                            <div class="flex items-baseline gap-1">
                                                <span class="text-3xl font-bold text-white">
                                                    {
                                                        currentRoundStatus.percentage
                                                    }
                                                    %
                                                </span>
                                                <span class="text-violet-300 text-sm">
                                                    capacity filled
                                                </span>
                                            </div>
                                            <div class="flex gap-1">
                                                {progressThresholds.map(
                                                    (threshold) => (
                                                        <div
                                                            class={`h-2 flex-1 rounded-sm ${
                                                                currentRoundStatus.percentage >=
                                                                threshold
                                                                    ? threshold <=
                                                                      40
                                                                        ? "bg-emerald-400"
                                                                        : threshold ===
                                                                            60
                                                                          ? "bg-amber-400"
                                                                          : "bg-red-400"
                                                                    : "bg-white/20"
                                                            }`}
                                                        />
                                                    ),
                                                )}
                                            </div>
                                            <p class="text-xs text-violet-300">
                                                {currentRoundStatus.description}
                                            </p>
                                        </div>
                                    ) : (
                                        <div class="flex items-start gap-2">
                                            <i class="fa-solid fa-triangle-exclamation h-4 w-4 text-slate-300 mt-0.5" />
                                            <p class="text-sm text-slate-200">
                                                Applications submitted now will
                                                be assessed in the January 2026
                                                round.
                                            </p>
                                        </div>
                                    )
                                }
                            </div>
                        </div>
                    </div>

                    <div
                        class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-3 mt-4"
                    >
                        <div
                            class="text-center px-3 py-4 bg-violet-500/30 rounded-lg border border-violet-400/30"
                        >
                            <i
                                class="fa-solid fa-calendar-day h-5 w-5 mx-auto mb-2 text-violet-300"
                            ></i>
                            <p
                                class="text-violet-400 text-xs uppercase tracking-wide"
                            >
                                Opens
                            </p>
                            <p class="font-semibold text-sm mt-1">1 Oct 2025</p>
                        </div>
                        <div
                            class="text-center px-3 py-4 bg-white/10 rounded-lg"
                        >
                            <i
                                class="fa-regular fa-clock h-5 w-5 mx-auto mb-2 text-violet-300"
                            ></i>
                            <p
                                class="text-violet-400 text-xs uppercase tracking-wide"
                            >
                                Closes
                            </p>
                            <p class="font-semibold text-sm mt-1">
                                15 Dec 2025
                            </p>
                        </div>
                        <div
                            class="text-center px-3 py-4 bg-white/10 rounded-lg"
                        >
                            <i
                                class="fa-solid fa-magnifying-glass-chart h-5 w-5 mx-auto mb-2 text-violet-300"
                            ></i>
                            <p
                                class="text-violet-400 text-xs uppercase tracking-wide"
                            >
                                Assessment Starts
                            </p>
                            <p class="font-semibold text-sm mt-1">
                                10 Jan 2026
                            </p>
                        </div>
                        <div
                            class="text-center px-3 py-4 bg-white/10 rounded-lg"
                        >
                            <i
                                class="fa-solid fa-clipboard-check h-5 w-5 mx-auto mb-2 text-violet-300"
                            ></i>
                            <p
                                class="text-violet-400 text-xs uppercase tracking-wide"
                            >
                                Assessment Ends
                            </p>
                            <p class="font-semibold text-sm mt-1">
                                20 Mar 2026
                            </p>
                        </div>
                        <div
                            class="text-center px-3 py-4 bg-white/10 rounded-lg"
                        >
                            <i
                                class="fa-regular fa-envelope h-5 w-5 mx-auto mb-2 text-violet-300"
                            ></i>
                            <p
                                class="text-violet-400 text-xs uppercase tracking-wide"
                            >
                                Results Start
                            </p>
                            <p class="font-semibold text-sm mt-1">
                                23 Mar 2026
                            </p>
                        </div>
                        <div
                            class="text-center px-3 py-4 bg-white/10 rounded-lg"
                        >
                            <i
                                class="fa-regular fa-circle-check h-5 w-5 mx-auto mb-2 text-violet-300"
                            ></i>
                            <p
                                class="text-violet-400 text-xs uppercase tracking-wide"
                            >
                                Results End
                            </p>
                            <p class="font-semibold text-sm mt-1">
                                30 Mar 2026
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b-2 border-violet-200">
                            <th
                                class="text-left py-4 px-3 font-semibold text-foreground"
                            >
                                <div
                                    class="flex items-center gap-2 text-violet-50"
                                >
                                    <i
                                        class="fa-solid fa-users h-4 w-4 text-violet-50"
                                    ></i>
                                    Status
                                </div>
                            </th>
                            <th
                                class="text-left py-4 px-3 font-semibold text-foreground"
                            >
                                <div
                                    class="flex items-center gap-2 text-violet-50"
                                >
                                    <i
                                        class="fa-solid fa-calendar-day h-4 w-4 text-violet-50"
                                    ></i>
                                    Opens
                                </div>
                            </th>
                            <th
                                class="text-left py-4 px-3 font-semibold text-foreground"
                            >
                                <div
                                    class="flex items-center gap-2 text-violet-50"
                                >
                                    <i
                                        class="fa-regular fa-clock h-4 w-4 text-violet-50"
                                    ></i>
                                    Closes
                                </div>
                            </th>
                            <th
                                class="text-left py-4 px-3 font-semibold text-foreground"
                            >
                                <div
                                    class="flex items-center gap-2 text-violet-50"
                                >
                                    <i
                                        class="fa-solid fa-magnifying-glass-chart h-4 w-4 text-violet-50"
                                    ></i>
                                    Assessment Starts
                                </div>
                            </th>
                            <th
                                class="text-left py-4 px-3 font-semibold text-foreground"
                            >
                                <div
                                    class="flex items-center gap-2 text-violet-50"
                                >
                                    <i
                                        class="fa-solid fa-clipboard-check h-4 w-4 text-violet-50"
                                    ></i>
                                    Assessment Ends
                                </div>
                            </th>
                            <th
                                class="text-left py-4 px-3 font-semibold text-foreground"
                            >
                                <div
                                    class="flex items-center gap-2 text-violet-50"
                                >
                                    <i
                                        class="fa-regular fa-envelope h-4 w-4 text-violet-50"
                                    ></i>
                                    Results Start
                                </div>
                            </th>
                            <th
                                class="text-left py-4 px-3 font-semibold text-foreground"
                            >
                                <div
                                    class="flex items-center gap-2 text-violet-50"
                                >
                                    <i
                                        class="fa-regular fa-circle-check h-4 w-4 text-violet-50"
                                    ></i>
                                    Results End
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {
                            applicationRounds.map((round, index) => {
                                const roundStatus = getRoundStatus(round);
                                return (
                                    <tr
                                        class={`border-b border-violet-100 ${index === 0 ? "bg-violet-50" : ""}`}
                                    >
                                        <td class="py-4 px-3">
                                            <div class="flex flex-col gap-1.5">
                                                <span
                                                    class={`inline-flex items-center rounded-full border px-2 py-0.5 text-xs font-semibold ${roundStatus.badgeClass}`}
                                                >
                                                    <span
                                                        class={`h-2 w-2 rounded-full mr-1.5 ${roundStatus.indicatorClass}`}
                                                    />
                                                    {roundStatus.label}
                                                </span>
                                                <div class="flex gap-0.5 w-24">
                                                    {progressThresholds.map(
                                                        (threshold) => (
                                                            <div
                                                                class={`h-1.5 flex-1 rounded-sm ${
                                                                    roundStatus.percentage >=
                                                                    threshold
                                                                        ? threshold <=
                                                                          40
                                                                            ? "bg-emerald-500"
                                                                            : threshold ===
                                                                                60
                                                                              ? "bg-amber-500"
                                                                              : threshold ===
                                                                                  80
                                                                                ? "bg-red-500"
                                                                                : "bg-slate-400"
                                                                        : "bg-slate-200"
                                                                }`}
                                                            />
                                                        ),
                                                    )}
                                                </div>
                                                <span class="text-xs text-muted-foreground">
                                                    {getCapacityLabel(
                                                        roundStatus.percentage,
                                                    )}
                                                </span>
                                            </div>
                                        </td>
                                        <td class="py-4 px-3">
                                            <span
                                                class={`font-medium ${index === 0 ? "text-violet-700" : "text-foreground"}`}
                                            >
                                                {round.opensDate}
                                            </span>
                                        </td>
                                        <td class="py-4 px-3 text-muted-foreground">
                                            {round.closesDate}
                                        </td>
                                        <td class="py-4 px-3 text-muted-foreground">
                                            {round.assessmentStart}
                                        </td>
                                        <td class="py-4 px-3 text-muted-foreground">
                                            {round.assessmentEnd}
                                        </td>
                                        <td class="py-4 px-3 text-muted-foreground">
                                            {round.resultsStart}
                                        </td>
                                        <td class="py-4 px-3 text-muted-foreground">
                                            {round.resultsEnd}
                                        </td>
                                    </tr>
                                );
                            })
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-16">
                <h3
                    class="text-2xl font-bold text-foreground mb-4 text-center text-violet-50"
                >
                    The Application Rounds
                </h3>
                <p
                    class="text-muted-foreground text-center max-w-2xl mx-auto mb-12 text-violet-50"
                >
                    All submitted applications undergo a thorough assessment
                    process. Here's what to expect at each stage.
                </p>

                <div class="mb-12">
                    <div class="flex items-center gap-4 mb-6">
                        <div
                            class="flex items-center gap-2 px-4 py-2 bg-violet-100 rounded-full"
                        >
                            <i
                                class="fa-solid fa-calendar-day h-4 w-4 text-violet-600"
                            ></i>
                            <span class="text-sm font-semibold text-violet-700"
                                >Opens</span
                            >
                        </div>
                        <div class="flex-1 h-px bg-violet-200"></div>
                        <div
                            class="flex items-center gap-2 px-4 py-2 bg-violet-100 rounded-full"
                        >
                            <i
                                class="fa-regular fa-clock h-4 w-4 text-violet-600"
                            ></i>
                            <span class="text-sm font-semibold text-violet-700"
                                >Closes</span
                            >
                        </div>
                    </div>

                    <div
                        class="bg-gradient-to-r from-violet-50 to-violet-100/50 rounded-2xl p-6 border border-violet-200"
                    >
                        <h4 class="text-lg font-bold text-violet-900 mb-2">
                            Before You Apply
                        </h4>
                        <p class="text-sm text-violet-700 mb-6">
                            Complete these steps during the application round (1
                            Oct 2025 – 15 Dec 2025)
                        </p>

                        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4">
                            {
                                beforeSteps.map((step) => (
                                    <div class="border border-violet-200 bg-white rounded-2xl p-4">
                                        <div class="flex items-center justify-center w-8 h-8 rounded-full bg-violet-600 text-white font-bold text-sm mb-3">
                                            {step.step}
                                        </div>
                                        <h5 class="font-semibold text-foreground mb-1 text-sm">
                                            {step.title}
                                        </h5>
                                        <p
                                            class={`text-xs text-muted-foreground ${step.linkLabel ? "mb-2" : ""}`}
                                        >
                                            {step.description}
                                        </p>
                                        {step.linkLabel && (
                                            <a
                                                href={step.linkHref}
                                                target="_blank"
                                                class="inline-flex items-center gap-1 text-xs font-medium text-violet-600 hover:text-violet-700"
                                            >
                                                <i
                                                    class={`${step.linkIcon} text-[11px]`}
                                                />
                                                {step.linkLabel}
                                            </a>
                                        )}
                                    </div>
                                ))
                            }
                        </div>
                    </div>
                </div>

                <div class="mb-12">
                    <div class="flex items-center gap-4 mb-6">
                        <div
                            class="flex items-center gap-2 px-4 py-2 bg-violet-200 rounded-full"
                        >
                            <i
                                class="fa-solid fa-magnifying-glass-chart h-4 w-4 text-violet-700"
                            ></i>
                            <span class="text-sm font-semibold text-violet-800"
                                >Assessment Starts</span
                            >
                        </div>
                        <div class="flex-1 h-px bg-violet-300"></div>
                        <div
                            class="flex items-center gap-2 px-4 py-2 bg-violet-200 rounded-full"
                        >
                            <i
                                class="fa-solid fa-clipboard-check h-4 w-4 text-violet-700"
                            ></i>
                            <span class="text-sm font-semibold text-violet-800"
                                >Assessment Ends</span
                            >
                        </div>
                    </div>

                    <div
                        class="bg-gradient-to-r from-violet-100 to-violet-200/50 rounded-2xl p-6 border border-violet-300"
                    >
                        <h4 class="text-lg font-bold text-violet-900 mb-2">
                            Assessment Process
                        </h4>
                        <p class="text-sm text-violet-700 mb-6">
                            Your application is reviewed during this period (10
                            Jan 2026 – 20 Mar 2026)
                        </p>

                        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4">
                            {
                                assessmentStages.map((stage) => (
                                    <div class="border border-violet-300 bg-white rounded-2xl p-4">
                                        <div class="flex items-center justify-center w-8 h-8 rounded-full bg-violet-900 text-white mb-3">
                                            <i
                                                class={`${stage.icon} text-sm`}
