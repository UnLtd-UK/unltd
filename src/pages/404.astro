---
import Template from "@layouts/Template.astro";
const name = "Page not found";
const description =
  "Lorem ipsum dolor sit amet consectetur, adipisicing elit. Mollitia dolores corrupti labore tempora, rem quidem maximead asperiores eveniet maiores nobis assumenda facilis quisquam fugiat accusamus nulla similique tenetur hic?";
---

<Template name={name} description={description}>
  <div
    class="min-h-full px-4 py-16 sm:px-6 sm:py-24 md:grid md:place-items-center lg:px-8"
  >
    <div class="mx-auto max-w-max">
      <main class="sm:flex">
        <p
          class="text-4xl font-bold tracking-tight text-violet-900 sm:text-5xl"
        >
          404
        </p>
        <div class="sm:ml-6">
          <div class="sm:border-l sm:border-violet-200 sm:pl-6">
            <h1
              class="text-4xl font-bold tracking-tight text-violet-800 sm:text-5xl"
            >
              Page not found
            </h1>
            <p class="mt-1 text-base text-violet-700">
              Please check the URL in the address bar and try again.
            </p>
          </div>
          <div
            class="mt-10 flex space-x-3 sm:border-l sm:border-transparent sm:pl-6"
          >
            <a
              href="#"
              class="inline-flex items-center rounded-full border border-transparent bg-violet-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-violet-700 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:ring-offset-2"
              >Go back home</a
            >
            <a
              href="#"
              class="inline-flex items-center rounded-full border border-transparent bg-violet-200 px-4 py-2 text-sm font-medium text-violet-700 hover:bg-violet-200 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:ring-offset-2"
              >Contact us</a
            >
          </div>
        </div>
      </main>
    </div>
  </div>
</Template>
