const breadcrumbs = [
  {
    name: name,
    slug: "grants-&-support",
  },
];

grants.map((grant) => {
  const slugify = (text) =>
    text
      .toString()
      .normalize("NFD")
      .replace(/[\u0300-\u036f]/g, "")
      .toLowerCase()
      .trim()
      .replace(/\s+/g, "-")
      .replace(/[^\w-]+/g, "")
      .replace(/--+/g, "-");

  grant.slug = slugify(grant.name);
});

