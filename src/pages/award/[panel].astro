---
import Template from "@layouts/Template.astro";
import Container from "@components/Container.astro";
import Breadcrumbs from "@components/Breadcrumbs.astro";
import Hero from "@components/Hero.astro";
import { marked } from "marked";
import slugify from "slugify";
import moment from "moment";

import { panels } from "@data/panels.js";

export async function getStaticPaths() {
    try {
        return panels.map((panel) => {
            const name = `${moment(panel.date_time).format(
                "ddd hh:mm, DD MMM YYYY",
            )} Panel`;
            const slug = slugify(panel.date_time, {
                lower: true,
                strict: true,
                locale: "en",
                trim: true,
            });

            const breadcrumbs = [
                {
                    name: "Awards",
                    slug: `/award`,
                },
                {
                    name: name,
                    slug: `/award/${slug}`,
                },
            ];

            return {
                params: {
                    panel: slug,
                },
                props: {
                    name: name,
                    people: panel.people,
                    breadcrumbs: breadcrumbs,
                },
            };
        });
    } catch (error) {
        console.error("üêõ ", error);
    }
}

const { name, people, breadcrumbs } = Astro.props;
---

<Template name={name} breadcrumbs={breadcrumbs}>
    <Container>
        <div class="py-24 md:py-32">
            <div class="grid grid-cols-1 gap-x-8 gap-y-20 xl:grid-cols-5">
                <div class="max-w-2xl xl:col-span-2">
                    <script is:inline>
                        const searchParams = new URLSearchParams(
                            window.location.search,
                        );
                        const name = searchParams.get("name");

                        // Get the element with the id of "name"
                        const nameElement = document.getElementById("dos");

                        // Change the innerHTML of the element
                        nameElement.innerHTML = name;

                        console.log(name);
                    </script>

                    <h2
                        class="text-3xl font-bold tracking-tight text-violet-100 sm:text-4xl"
                    >
                        <span id="dos">Social Entrepreneur</span> Panel -
                        {name}
                    </h2>
                    <p class="mt-6 text-lg leading-8 text-violet-300">
                        We‚Äôre a dynamic group of individuals who are passionate
                        about what we do and dedicated to delivering the best
                        results for our clients.
                    </p>
                </div>
                <ul
                    role="list"
                    class="-mt-12 space-y-12 divide-y divide-violet-500 xl:col-span-3"
                >
                    {
                        people.map((person) => (
                            <li class="flex flex-col gap-10 pt-12 sm:flex-row">
                                <img
                                    class="aspect-[4/5] w-52 flex-none rounded-2xl object-cover"
                                    src={`https://unltd.directus.app/assets/${person.people_id.image}`}
                                    alt=""
                                />
                                <div class="max-w-xl flex-auto">
                                    <h3 class="text-lg font-semibold leading-8 tracking-tight text-violet-100">
                                        {person.people_id.name}
                                    </h3>
                                    <p class="text-base leading-7 text-violet-300">
                                        Co-Founder / CEO
                                    </p>
                                    <p class="mt-6 text-base leading-7 text-violet-200">
                                        {person.people_id.bio}
                                    </p>
                                    <ul role="list" class="mt-6 flex gap-x-6">
                                        <li>
                                            <a
                                                href={person.people_id.linkedin}
                                                class="text-violet-200 hover:text-violet-400"
                                            >
                                                <span class="sr-only">
                                                    LinkedIn
                                                </span>
                                                <i class="fa-brands fa-linkedin text-xl" />
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </div>
    </Container>
</Template>
