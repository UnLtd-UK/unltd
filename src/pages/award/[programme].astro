                <div class={`${programmeColours.text1[programme.colour]}`}>
                  <p>Age: {programme.age}</p>
                  <p>Geography: {programme.geography}</p>
                  <p>Sectors: {programme.sectors}</p>
                </div>
              </div>

              <div>
                <div class="relative">
