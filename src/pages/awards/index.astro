---
// PROPS
const props = {
  name: "Awards",
  slug: "/awards",
  description:
    "You have an idea, or you are already creating a positive social impact with your venture and are looking to develop. We combine funding and support specifically tailored to you. We'll help get you started or to grow.",
};

const breadcrumbs = [
  {
    name: "Awards",
    path: "/awards",
  },
];

// LAYOUT
import Template from "@layouts/Template.astro";
import Container from "@components/Container.astro";
import Breadcrumbs from "@components/Breadcrumbs.astro";

// COMPONENTS
import HeroWithChecker from "@components/awards/HeroWithChecker.astro";
import Awards from "@components/awards/Awards.astro";
import HowApplyingWorks from "@components/awards/HowApplyingWorks.astro";
import WhenToApply from "@components/awards/WhenToApply.astro";
import EligibilityChecker from "@components/awards/EligibilityChecker.astro";
import EligibilityCriteria from "@components/awards/EligibilityCriteria.astro";
import Sessions from "@components/awards/Sessions.astro";
import FrequentlyAskedQuestions from "@components/awards/FrequentlyAskedQuestions.astro";
---

<Template name={props.name} description={props.description}>
  <Container>
    <Breadcrumbs breadcrumbs={breadcrumbs} />
  </Container>
  <Container id="hero" class="bg-violet-950 py-16 mt-8">
    <HeroWithChecker />
  </Container>
  <Container id="our-awards" class="bg-violet-900 py-16 mt-8">
    <Awards />
  </Container>
  <Container id="how-applying-works" class="bg-violet-950 py-16 mt-8">
    <HowApplyingWorks showEligibilityLink={true} />
  </Container>
  <Container id="when-to-apply" class="bg-violet-900 py-16 mt-8">
    <WhenToApply />
  </Container>
  <Container id="sessions" class="bg-violet-950 py-16 mt-8">
    <Sessions />
  </Container>
  <Container id="eligibility-checker" class="bg-violet-900 py-16 mt-8">
    <EligibilityChecker />
  </Container>
  <Container id="eligibility-criteria" class="bg-violet-950 py-16 mt-8">
    <EligibilityCriteria />
  </Container>
  <Container id="frequently-asked-questions" class="bg-violet-900 py-16 mt-8">
    <FrequentlyAskedQuestions />
  </Container>
</Template>
