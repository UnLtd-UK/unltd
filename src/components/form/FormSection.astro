---
const { name, description, slug } = Astro.props;
---

<form action="#" method="POST">
    <div class="shadow sm:overflow-hidden sm:rounded-md">
      <div class="space-y-6 bg-white py-6 px-4 sm:p-10">

        <div>
          <h3 id={slug} class="text-lg font-medium leading-6 text-gray-900">{ name }</h3>
          { description && <p class="mt-1 text-sm text-gray-500">{ description }</p> }
        </div>

        <div class="grid grid-cols-6 gap-10">

          <slot/>

        </div>
      </div>
    </div>
  </form>