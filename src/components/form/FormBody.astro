const { applications, application, sections, fields } = Astro.props;

let sectionFilter = sections.filter((sec) => {
  let dog;
  sec.applications.filter((seci) => {
    if (seci === application.id) {
      return (dog = sec);
    }
    return dog;
  });
  return dog;
});
