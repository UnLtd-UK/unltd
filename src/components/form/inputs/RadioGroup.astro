---
const { name, description, slug, required, options } = Astro.props;
---

<fieldset>
  <div class="flex justify-between">
    <label for={slug} class="block text-sm font-medium text-gray-700"
      >{name}</label
    >
    <span class="text-sm text-gray-500" id={`${slug}-required`}
      >{required === "true" && `Required`}</span
    >
  </div>
  <p
    class="mt-2 text-sm text-gray-500 leading-relaxed"
    id={`${slug}-description}`}
  >
    {description}
  </p>
  <div class="-space-y-px rounded-md bg-white">
    {
      options.map((item, index) => (
        <label class="rounded-tl-md rounded-tr-md relative border p-4 flex cursor-pointer focus:outline-none">
          <input
            type="radio"
            name={name}
            value={item.name}
            class="mt-0.5 h-4 w-4 shrink-0 cursor-pointer text-violet-600 border-gray-300 focus:ring-violet-500"
            aria-labelledby={`${item.name}-${index++}-label`}
            aria-describedby={`${item.name}-${index++}-description`}
          />
          <span class="ml-3 flex flex-col">
            <span
              id={`${item.name}-${index++}-label`}
              class="block text-sm font-medium text-gray-700"
            >
              {item.name}
            </span>
            <span
              id={`${item.name}-${index++}-description`}
              class="block text-sm text-gray-700"
            >
              {item.description}
            </span>
          </span>
        </label>
      ))
    }
  </div>
</fieldset>
