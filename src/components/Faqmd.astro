---
import { marked } from "marked";
const { question } = Astro.props;
---

<div class="pt-6" x-data="{ open: false }">
  <dt>
    <!-- Expand/collapse question button -->
    <button
      x-on:click="open = ! open"
      type="button"
      class="flex w-full items-start justify-between text-left text-gray-900"
      aria-controls="faq-0"
      aria-expanded="false"
    >
      <span class="text-base font-semibold leading-7">{question}</span>
      <span class="ml-6 flex h-7 items-center">
        <i class="fa-solid fa-chevron-down" x-show="!open" aria-hidden="true"
        ></i>
        <i class="fa-solid fa-chevron-up" x-show="open" aria-hidden="true"></i>
      </span>
    </button>
  </dt>
  <dd
    class="mt-2 pr-12 text-base leading-7 text-gray-600"
    id="faq-0"
    x-show="open"
    x-transition
  >
    <slot />
  </dd>
</div>
