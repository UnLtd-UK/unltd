---
const { reviewed, updated } = Astro.props;
---

<div class="flex flex-row gap-5 justify-between">
    {
        reviewed && (
            <div class="flex flex-row gap-10">
                {updated && (
                    <div>
                        <p class="text-violet-900 text-xs">Updated</p>
                        <p class="text-violet-900 text-sm">
                            {new Date(updated).toLocaleDateString()}
                        </p>
                    </div>
                )}

                {updated && (
                    <div>
                        <p class="text-violet-900 text-xs">Reviewed</p>
                        <p class="text-violet-900 text-sm">
                            {new Date(reviewed).toLocaleDateString()}
                        </p>
                    </div>
                )}
            </div>
        )
    }
</div>
