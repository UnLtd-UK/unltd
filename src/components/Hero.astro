---
const { name, description, features } = Astro.props;
---

<div
  class="flex flex-col gap-10 bg-gradient-to-b from-violet-900 to-zinc-900 px-12 py-12 lg:px-20 lg:py-16 rounded-3xl border-2 border-violet-700"
>
  <div class="flex flex-col gap-5">
    <h1 class="text-7xl font-bold">{name}</h1>
    <p class="text-3xl">{description}</p>
  </div>
  <div class="flex flex-col lg:flex-row gap-10 lg:items-center">
    {
      features.map((feature) => (
        <div class="flex items-center gap-3">
          <i class={`text-2xl fa-solid fa-${feature.icon}`} />
          <p class="font-bold text-sm">{feature.name}</p>
        </div>
      ))
    }
  </div>
</div>
