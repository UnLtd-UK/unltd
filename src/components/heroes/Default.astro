---
const { name, description, buttons = [], image } = Astro.props;
import moment from "moment";
---

<div class="py-12 sm:py-12">
    <div class="mx-auto max-w-7xl flex flex-col gap-2">
        <div class="mx-auto lg:mx-0">
            <h2
                class="max-w-6xl mt-2 text-4xl font-bold tracking-tight text-violet-200 sm:text-6xl"
            >
                {name}
            </h2>
            <p class="max-w-3xl mt-6 text-lg leading-8 text-violet-400">
                {description}
            </p>
        </div>
        {
            image && image.url && (
                <figure class="flex flex-col gap-2">
                    <img
                        src={`https://unltd.directus.app/assets/${image.url}`}
                        alt={image.alt ? image.alt : ""}
                        class=" rounded-2xl"
                    />
                    {image.caption && (
                        <figcaption class="text-xs text-violet-300">
                            {image.caption}
                        </figcaption>
                    )}
                </figure>
            )
        }
        {
            buttons.length > 0 && (
                <div>
                    <div class="flex gap-x-4">
                        {buttons.map((button) => (
                            <a
                                href={button.url}
                                target={button.target}
                                class="flex-none rounded-md bg-violet-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs hover:bg-violet-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-violet-600"
                            >
                                {button.name}
                            </a>
                        ))}
                    </div>
                </div>
            )
        }
    </div>
</div>
