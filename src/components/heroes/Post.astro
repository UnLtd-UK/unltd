---
const { name, image, description, published, author, tag } =
    Astro.props.frontmatter || Astro.props;
---

<section>
    <div class="max-w-4xl">
        <div class="mt-8 flex items-center gap-x-4 text-xs">
            <time
                datetime={published}
                class="text-violet-600 dark:text-violet-400"
            >
                Published {
                    new Date(published).toLocaleDateString("en-GB", {
                        weekday: "short",
                        hour: "2-digit",
                        minute: "2-digit",
                        day: "2-digit",
                        month: "short",
                        year: "numeric",
                    })
                }
            </time>
            <span
                class="relative z-10 rounded-full bg-violet-100 dark:bg-violet-800 px-3 py-1.5 font-medium text-violet-600 dark:text-violet-300"
            >
                {tag}
            </span>
        </div>
        <div class="group relative">
            <h3
                class="mt-3 text-4xl font-semibold text-violet-700 dark:text-violet-100"
            >
                <span class="absolute inset-0"></span>
                {name}
            </h3>
        </div>
        <p class="mt-5 text-2xl leading-8 text-violet-600 dark:text-violet-200">
            {description}
        </p>
    </div>
    <div class="relative flex gap-x-4 text-sm leading-6 flex-col gap-2">
        <p class="text-violet-300">Written by</p>
        <div class="">
            <p
                class="font-semibold text-sm text-violet-700 dark:text-violet-300"
            >
                {author.name}
            </p>
            <p class="text-violet-600 text-xs dark:text-violet-400">
                {author.position}
            </p>
        </div>
    </div>
    <div class="my-10">
        {
            image.url !== null && (
                <figure class="flex flex-col gap-2">
                    <img
                        src={`https://unltd.directus.app/assets/${image.url}`}
                        alt={image.alt ? image.alt : ""}
                        class=" rounded-2xl"
                    />
                    {image.caption && (
                        <figcaption class="text-xs text-violet-300">
                            {image.caption}
                        </figcaption>
                    )}
                </figure>
            )
        }
    </div>
</section>
