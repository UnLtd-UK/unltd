---
const { name, description } = Astro.props;
---

<div class="bg-gray-50 sm:rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <h3 class="text-lg font-medium leading-6 text-gray-900">
      {name}
    </h3>
    <div class="mt-2 max-w-xl text-sm text-gray-500">
      <p>
        {description}
      </p>
    </div>
  </div>
</div>
