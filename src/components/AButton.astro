---
const { name, href, target, icon, description } = Astro.props;
---

<a
  href={href}
  target={target}
  class="rounded-md bg-violet-200 px-3.5 py-2.5 text-sm font-semibold text-violet-900 shadow-xs ring-1 ring-inset ring-violet-300 hover:bg-violet-50"
>
  <div class="flex flex-row gap-3 items-center">
    {
      icon.position == 0 && (
        <i
          class={`text-violet-500 text-xs group-hover:text-violet-500 fa-solid fa-${icon.name}`}
        />
      )
    }
    <div class="flex flex-col">
      <span
        class="text-violet-60 font-medium text-xs group-hover:text-violet-800"
        >{name}</span
      >

      {
        description && (
          <span class="text-violet-500 group-hover:text-violet-600 text-xs">
            {description}
          </span>
        )
      }
    </div>
    {
      icon.position == 1 && (
        <i
          class={`text-xs group-hover:text-violet-500 fa-solid fa-${icon.name}`}
        />
      )
    }
  </div>
</a>
