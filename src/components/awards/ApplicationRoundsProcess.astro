---
/**
 * ApplicationRoundsProcess Component
 * Displays the application process as a beautiful journey timeline
 * Optionally shows the current round status widget
 */

import Container from "@components/Container.astro";
import CurrentRoundCard from "@components/awards/CurrentRoundCard.astro";

// DATA
import { rounds } from "@data/rounds.js";
import { processAllRounds } from "@utils/application-rounds.js";

interface Props {
    showEligibilityLink?: boolean;
    showResourceLinks?: boolean;
    showRoundWidget?: boolean;
}

const {
    showEligibilityLink = false,
    showResourceLinks = false,
    showRoundWidget = false,
} = Astro.props;

// Process all rounds from Directus (only needed if showing the widget)
const {
    all: applicationRounds,
    currentRound,
    nextOpenRound,
} = processAllRounds(rounds);

// Determine if round is open for the Apply button
const isRoundOpen = currentRound?.isOpen && !currentRound?.isCapacityFull;

// Journey phases with their steps
const phases = [
    {
        id: "prepare",
        title: "Prepare",
        subtitle: "Get ready to apply",
        icon: "fa-solid fa-lightbulb",
        color: "emerald",
        steps: [
            {
                title: "Check Eligibility",
                description:
                    "Use our eligibility checker to confirm you meet all criteria before you start.",
                icon: "fa-solid fa-clipboard-check",
                link: showEligibilityLink
                    ? {
                          label: "Check eligibility",
                          href: "/awards/eligibility",
                          icon: "fa-solid fa-arrow-right",
                      }
                    : null,
            },
            {
                title: "Preview Questions",
                description:
                    "Download a copy of the application to understand what's required and draft your answers offline.",
                icon: "fa-solid fa-file-lines",
                link: showResourceLinks
                    ? {
                          label: "Download preview",
                          href: "/resources/application-form-preview",
                          icon: "fa-solid fa-download",
                      }
                    : null,
            },
            {
                title: "Plan Your Budget",
                description:
                    "Learn what you can include and how to present your Award budget effectively.",
                icon: "fa-solid fa-coins",
                link: showResourceLinks
                    ? {
                          label: "Budget guidance",
                          href: "/resources/award-budget-guidance",
                          icon: "fa-solid fa-arrow-right",
                      }
                    : null,
            },
        ],
    },
    {
        id: "apply",
        title: "Apply",
        subtitle: "Submit your application",
        icon: "fa-solid fa-paper-plane",
        color: "violet",
        steps: [
            {
                title: "Complete Application",
                description:
                    "Fill out all sections of the online application form through our portal.",
                icon: "fa-solid fa-pen-to-square",
            },
            {
                title: "Submit Before Deadline",
                description:
                    "We assess applications in rounds. Submit before the round closes to be considered.",
                icon: "fa-solid fa-clock",
            },
        ],
    },
    {
        id: "assess",
        title: "Assessment",
        subtitle: "We review your application",
        icon: "fa-solid fa-magnifying-glass",
        color: "amber",
        steps: [
            {
                title: "Suitability Check",
                description:
                    "Your application is reviewed against social impact, inclusion, and financial sustainability criteria.",
                icon: "fa-solid fa-shield-halved",
            },
            {
                title: "Peer Review",
                description:
                    "Support Managers discuss your application together. Strong applications progress to panel.",
                icon: "fa-solid fa-people-group",
            },
            {
                title: "Panel Meeting",
                description:
                    "Discuss your venture with staff and experienced social entrepreneurs in a supportive setting.",
                icon: "fa-solid fa-comments",
                link: showResourceLinks
                    ? {
                          label: "Panel guide",
                          href: "/resources/panel-meeting-guide",
                          icon: "fa-solid fa-arrow-right",
                      }
                    : null,
            },
            {
                title: "Committee Approval",
                description:
                    "Final recommendations go to the Awards Committee for approval.",
                icon: "fa-solid fa-gavel",
            },
        ],
    },
    {
        id: "outcome",
        title: "Outcome",
        subtitle: "Receive your decision",
        icon: "fa-solid fa-envelope-open-text",
        color: "sky",
        steps: [
            {
                title: "Decision Email",
                description:
                    "We'll email you with the outcome of your application and detailed feedback.",
                icon: "fa-solid fa-envelope",
            },
        ],
    },
];

// Outcome cards
const outcomes = {
    success: {
        title: "If successful",
        subtitle: "Welcome to the community",
        icon: "fa-solid fa-party-horn",
        items: [
            "Welcome pack with cohort information",
            "Budget & reporting guidance",
            "Dedicated Support Manager introduction",
        ],
    },
    unsuccessful: {
        title: "If unsuccessful",
        subtitle: "Support to try again",
        icon: "fa-solid fa-arrows-rotate",
        items: [
            "Detailed feedback on your application",
            "Resources to develop your venture",
            "Encouragement to reapply",
        ],
    },
};

// Color mapping for Tailwind classes
const colorClasses = {
    emerald: {
        bg: "bg-emerald-500",
        bgLight: "bg-emerald-50 dark:bg-emerald-950/50",
        bgLighter: "bg-emerald-100 dark:bg-emerald-900/30",
        border: "border-emerald-200 dark:border-emerald-800",
        text: "text-emerald-600 dark:text-emerald-400",
        textDark: "text-emerald-700 dark:text-emerald-300",
        ring: "ring-emerald-500/20",
        gradient: "from-emerald-500 to-teal-500",
    },
    violet: {
        bg: "bg-violet-500",
        bgLight: "bg-violet-50 dark:bg-violet-950/50",
        bgLighter: "bg-violet-100 dark:bg-violet-900/30",
        border: "border-violet-200 dark:border-violet-800",
        text: "text-violet-600 dark:text-violet-400",
        textDark: "text-violet-700 dark:text-violet-300",
        ring: "ring-violet-500/20",
        gradient: "from-violet-500 to-purple-500",
    },
    amber: {
        bg: "bg-amber-500",
        bgLight: "bg-amber-50 dark:bg-amber-950/50",
        bgLighter: "bg-amber-100 dark:bg-amber-900/30",
        border: "border-amber-200 dark:border-amber-800",
        text: "text-amber-600 dark:text-amber-400",
        textDark: "text-amber-700 dark:text-amber-300",
        ring: "ring-amber-500/20",
        gradient: "from-amber-500 to-orange-500",
    },
    sky: {
        bg: "bg-sky-500",
        bgLight: "bg-sky-50 dark:bg-sky-950/50",
        bgLighter: "bg-sky-100 dark:bg-sky-900/30",
        border: "border-sky-200 dark:border-sky-800",
        text: "text-sky-600 dark:text-sky-400",
        textDark: "text-sky-700 dark:text-sky-300",
        ring: "ring-sky-500/20",
        gradient: "from-sky-500 to-blue-500",
    },
};
---

<section class="bg-slate-50 dark:bg-slate-900 py-16 lg:py-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="text-center mb-16">
            <span
                class="inline-flex items-center gap-2 rounded-full bg-violet-100 dark:bg-violet-900/50 px-4 py-1.5 text-sm font-semibold text-violet-700 dark:text-violet-300 mb-4"
            >
                <i class="fa-solid fa-route" aria-hidden="true"></i>
                Your Application Journey
            </span>
            <h2
                class="text-3xl md:text-4xl font-bold text-slate-900 dark:text-white mb-4"
            >
                How the process works
            </h2>
            <p
                class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto"
            >
                From preparation to outcome, here's what to expect at each stage
                of your Award application.
            </p>
        </div>

        <!-- Current Round Widget -->
        {
            showRoundWidget && (
                <div class="mb-16">
                    <CurrentRoundCard
                        currentRound={currentRound}
                        nextOpenRound={nextOpenRound}
                        allRounds={applicationRounds}
                    />

                    <div class="mt-8 text-center">
                        {isRoundOpen ? (
                            <a
                                href="https://portal.unltd.org.uk/apply"
                                class="inline-flex items-center gap-2 px-8 py-4 bg-emerald-600 hover:bg-emerald-500 text-white font-bold rounded-xl text-lg transition-all duration-200 shadow-lg hover:shadow-xl hover:scale-105"
                            >
                                <i
                                    class="fa-solid fa-rocket"
                                    aria-hidden="true"
                                />
                                Apply Now
                                <i
                                    class="fa-solid fa-arrow-right"
                                    aria-hidden="true"
                                />
                            </a>
                        ) : (
                            <div class="inline-flex items-center gap-2 px-8 py-4 bg-slate-200 dark:bg-slate-700 text-slate-500 dark:text-slate-400 font-semibold rounded-xl text-lg cursor-not-allowed">
                                <i
                                    class="fa-solid fa-clock"
                                    aria-hidden="true"
                                />
                                Applications open{" "}
                                {currentRound?.dates?.opens || "soon"}
                            </div>
                        )}
                    </div>
                </div>
            )
        }

        <!-- Journey Timeline -->
        <div class="relative">
            <!-- Vertical connecting line (desktop) -->
            <div
                class="hidden lg:block absolute left-1/2 top-0 bottom-0 w-0.5 bg-gradient-to-b from-emerald-300 via-violet-300 to-sky-300 dark:from-emerald-700 dark:via-violet-700 dark:to-sky-700 -translate-x-1/2"
            >
            </div>

            <!-- Phases -->
            <div class="space-y-8 lg:space-y-0">
                {
                    phases.map((phase, phaseIndex) => {
                        const colors =
                            colorClasses[
                                phase.color as keyof typeof colorClasses
                            ];
                        const isEven = phaseIndex % 2 === 0;

                        return (
                            <div class="relative lg:grid lg:grid-cols-2 lg:gap-8 lg:py-8">
                                {/* Timeline node (desktop) */}
                                <div class="hidden lg:flex absolute left-1/2 top-8 -translate-x-1/2 z-10">
                                    <div
                                        class={`w-14 h-14 rounded-2xl ${colors.bg} text-white flex items-center justify-center shadow-lg ring-4 ring-white dark:ring-slate-900`}
                                    >
                                        <i
                                            class={`${phase.icon} text-xl`}
                                            aria-hidden="true"
                                        />
                                    </div>
                                </div>

                                {/* Phase content */}
                                <div
                                    class={`lg:${isEven ? "pr-16 text-right" : "pl-16 col-start-2"}`}
                                >
                                    {/* Phase card */}
                                    <div
                                        class={`${colors.bgLight} rounded-3xl p-6 lg:p-8 border ${colors.border} shadow-sm`}
                                    >
                                        {/* Mobile icon */}
                                        <div class="lg:hidden flex items-center gap-3 mb-4">
                                            <div
                                                class={`w-12 h-12 rounded-xl ${colors.bg} text-white flex items-center justify-center shadow-md`}
                                            >
                                                <i
                                                    class={`${phase.icon} text-lg`}
                                                    aria-hidden="true"
                                                />
                                            </div>
                                            <div>
                                                <h3
                                                    class={`text-xl font-bold ${colors.textDark}`}
                                                >
                                                    {phase.title}
                                                </h3>
                                                <p class="text-sm text-slate-500 dark:text-slate-400">
                                                    {phase.subtitle}
                                                </p>
                                            </div>
                                        </div>

                                        {/* Desktop header */}
                                        <div
                                            class={`hidden lg:block mb-6 ${isEven ? "text-right" : "text-left"}`}
                                        >
                                            <h3
                                                class={`text-2xl font-bold ${colors.textDark}`}
                                            >
                                                {phase.title}
                                            </h3>
                                            <p class="text-slate-500 dark:text-slate-400">
                                                {phase.subtitle}
                                            </p>
                                        </div>

                                        {/* Steps */}
                                        <div
                                            class={`space-y-3 ${isEven ? "lg:text-right" : "lg:text-left"}`}
                                        >
                                            {phase.steps.map((step) => (
                                                <div
                                                    class={`flex items-start gap-3 ${isEven ? "lg:flex-row-reverse" : ""}`}
                                                >
                                                    <div
                                                        class={`shrink-0 w-9 h-9 rounded-lg ${colors.bgLighter} ${colors.text} flex items-center justify-center`}
                                                    >
                                                        <i
                                                            class={`${step.icon} text-sm`}
                                                            aria-hidden="true"
                                                        />
                                                    </div>
                                                    <div class="flex-1 min-w-0">
                                                        <h4 class="font-semibold text-slate-900 dark:text-white text-sm">
                                                            {step.title}
                                                        </h4>
                                                        <p class="text-sm text-slate-600 dark:text-slate-400 mt-0.5">
                                                            {step.description}
                                                        </p>
                                                        {step.link && (
                                                            <a
                                                                href={
                                                                    step.link
                                                                        .href
                                                                }
                                                                class={`inline-flex items-center gap-1.5 text-xs font-medium ${colors.text} hover:underline mt-1.5`}
                                                            >
                                                                {
                                                                    step.link
                                                                        .label
                                                                }
                                                                <i
                                                                    class={`${step.link.icon} text-[10px]`}
                                                                    aria-hidden="true"
                                                                />
                                                            </a>
                                                        )}
                                                    </div>
                                                </div>
                                            ))}
                                        </div>
                                    </div>
                                </div>

                                {/* Empty column for alternating layout */}
                                {isEven && <div class="hidden lg:block" />}
                            </div>
                        );
                    })
                }
            </div>
        </div>

        <!-- Outcomes Section -->
        <div class="mt-16 lg:mt-24">
            <div class="text-center mb-8">
                <h3
                    class="text-2xl font-bold text-slate-900 dark:text-white mb-2"
                >
                    What happens next?
                </h3>
                <p class="text-slate-600 dark:text-slate-400">
                    Whatever the outcome, we're here to support you.
                </p>
            </div>

            <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
                <!-- Success outcome -->
                <div
                    class="relative overflow-hidden rounded-3xl bg-gradient-to-br from-emerald-500 to-teal-600 p-6 lg:p-8 text-white shadow-xl"
                >
                    <div
                        class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full -translate-y-1/2 translate-x-1/2"
                    >
                    </div>
                    <div
                        class="absolute bottom-0 left-0 w-24 h-24 bg-white/5 rounded-full translate-y-1/2 -translate-x-1/2"
                    >
                    </div>

                    <div class="relative">
                        <div class="flex items-center gap-3 mb-4">
                            <div
                                class="w-12 h-12 rounded-xl bg-white/20 flex items-center justify-center"
                            >
                                <i
                                    class={`${outcomes.success.icon} text-xl`}
                                    aria-hidden="true"></i>
                            </div>
                            <div>
                                <p class="text-emerald-100 text-sm font-medium">
                                    {outcomes.success.title}
                                </p>
                                <h4 class="text-lg font-bold">
                                    {outcomes.success.subtitle}
                                </h4>
                            </div>
                        </div>

                        <ul class="space-y-2.5">
                            {
                                outcomes.success.items.map((item) => (
                                    <li class="flex items-center gap-2.5 text-sm">
                                        <i
                                            class="fa-solid fa-check text-emerald-200"
                                            aria-hidden="true"
                                        />
                                        <span class="text-white/90">
                                            {item}
                                        </span>
                                    </li>
                                ))
                            }
                        </ul>
                    </div>
                </div>

                <!-- Unsuccessful outcome -->
                <div
                    class="relative overflow-hidden rounded-3xl bg-gradient-to-br from-slate-700 to-slate-800 dark:from-slate-800 dark:to-slate-900 p-6 lg:p-8 text-white shadow-xl border border-slate-600 dark:border-slate-700"
                >
                    <div
                        class="absolute top-0 right-0 w-32 h-32 bg-white/5 rounded-full -translate-y-1/2 translate-x-1/2"
                    >
                    </div>
                    <div
                        class="absolute bottom-0 left-0 w-24 h-24 bg-white/5 rounded-full translate-y-1/2 -translate-x-1/2"
                    >
                    </div>

                    <div class="relative">
                        <div class="flex items-center gap-3 mb-4">
                            <div
                                class="w-12 h-12 rounded-xl bg-white/10 flex items-center justify-center"
                            >
                                <i
                                    class={`${outcomes.unsuccessful.icon} text-xl`}
                                    aria-hidden="true"></i>
                            </div>
                            <div>
                                <p class="text-slate-400 text-sm font-medium">
                                    {outcomes.unsuccessful.title}
                                </p>
                                <h4 class="text-lg font-bold">
                                    {outcomes.unsuccessful.subtitle}
                                </h4>
                            </div>
                        </div>

                        <ul class="space-y-2.5">
                            {
                                outcomes.unsuccessful.items.map((item) => (
                                    <li class="flex items-center gap-2.5 text-sm">
                                        <i
                                            class="fa-solid fa-arrow-right text-slate-500"
                                            aria-hidden="true"
                                        />
                                        <span class="text-slate-300">
                                            {item}
                                        </span>
                                    </li>
                                ))
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Help CTA -->
        <div class="mt-12 text-center">
            <p class="text-slate-600 dark:text-slate-400">
                Questions about the process?
                <a
                    href="mailto:awards@unltd.org.uk"
                    class="text-violet-600 dark:text-violet-400 hover:underline font-medium ml-1"
                >
                    Email awards@unltd.org.uk
                </a>
            </p>
        </div>
    </div>
</section>
