---
import { Code } from "astro:components";
import { marked } from "marked";
import { sessions } from "@data/sessions.js";
import { palette } from "@data/palette.js";
import Container from "@components/Container.astro"
import { rounds } from "@data/rounds.js";
import moment from "moment";
import { steps } from "@data/steps.js";

import slugify from "slugify";
---

<Container bg="bg-violet-100 dark:bg-violet-900">
<div class="pt-20 flex flex-col gap-10">
  <div class="">
    <h2
      id="applynow"
      class="text-base font-semibold leading-7 text-amber-500 dark:text-amber-500"
    >
      Apply
    </h2>
    <p
      class="mt-2 text-4xl font-bold tracking-tight text-violet-950 dark:text-violet-100 sm:text-5xl"
    >
      How to apply for an Award
    </p>
  <p
    class="mt-6 max-w-3xl text-lg leading-8 text-violet-800 dark:text-violet-200"
  >
<span class="font-bold">Read through all of the following steps to guide you in your application.</span> We are committed to using our resources to drive change.
        At least 50% of our Awards will support social entrepreneurs who come from
        a disabled and/or Black, Asian or minority ethnic background. <a href="/equity-commitments" class="text-violet-100 hover:text-violet-50 font-bold underline underline-offset-4 decoration-amber-500 decoration-1 hover:decoration-2">Learn more about our equity commitments.</a>
  </p>

</div>
        <div class={`flex flex-col lg:flex-row gap-6 py-4`}>
        {
            sessions.map((session) => {
              const date = new Date(session.datetime);
              
              return (
              <article class={`flex max-w-xl flex-row items-start justify-between flex-1 lg:basis-1/2 p-4 border-solid border-2 bg-violet-950 border-violet-600 rounded-xl group relative gap-4`}>

                    <div class="basis-1/4 flex-none flex gap-2 flex-col bg-violet-200 rounded-lg p-2 items-center justify-center border-dashed border-2 border-violet-300">
                      <span class="text-xs text-violet-950 font-bold">{ date.toLocaleString('en-GB', { weekday: 'long' })}</span>
                      <div class="flex flex-col items-center gap-1">
                      <span class="uppercase text-xs text-violet-950">{ date.toLocaleString('en-GB', { month: 'long' })}</span>
                      <span class="text-xl font-bold text-violet-50 w-10 h-10 bg-violet-900 group-hover:bg-violet-700 rounded-full flex justify-center items-center">{ date.getDate() }</span>

                      </div>
                      <span class="uppercase text-sm text-violet-950">{date.toLocaleTimeString('en-GB', { hour: '2-digit', minute: '2-digit' })}</span>
                    </div>
  
                  <div class="basis-3/4 flex flex-col gap-1 items-center">
                    <p class={`truncate text-xs flex gap-2 items-center`}>
                      <i class={`fa-regular fa-wifi text-violet-100`}></i>
                      <span class={`text-violet-100 uppercase`}> Online </span>
                    </p>
                    <h3 class="text-base font-semibold leading-6 text-violet-200 group-hover:text-violet-300">
                      <a href={session.link}>
                        <span class="absolute inset-0"></span>
                        {session.name}
                      </a>
                    </h3>
                    <div class="flex flex-row gap-3">
                      { session.programme && (<span class={`${palette[session.programme.name].badge} inline-flex items-center rounded-md px-2 py-1 text-xs font-medium ring-1 ring-inset`}>{session.programme.name}</span>)}
                    </div>
                </div>
              </article>
            )})
        }
      </div>
  <div class="rounded-md bg-violet-100 p-4">
  <div class="flex">
    <div class="flex-shrink-0">
      <i class="fa-regular fa-universal-access text-violet-600 text-4xl" aria-hidden="true"></i>
    </div>
    <div class="ml-3 flex-1 md:flex md:justify-between items-center">
      <p class="text-sm text-violet-600 font-semibold">For those with additional support needs and who may face barriers to applying, we can offer 1:1 assistance.</p>
      <p class="mt-3 text-sm md:ml-6 md:mt-0">
        <a href="/pre-application-support" class="whitespace-nowrap font-medium text-violet-700 hover:text-violet-600">
          Details
          <i class="fa-solid fa-arrow-right text-sm"  aria-hidden="true"></i>
        </a>
      </p>
    </div>
  </div>
</div>
  <div class="rounded-md bg-violet-100 p-4 flex">
  <div class="flex">
    <div class="flex-shrink-0">
      <!-- <div class="relative w-10 h-10 border border-black">
        <div class="absolute inset-0 bg-white bottom-1/2"></div>
        <div class="absolute inset-0 bg-green-600 top-1/2"></div>
        <div class="absolute inset-0 flex items-center justify-center">
          <i class="fa-sharp fa-solid fa-dragon text-red-600 text-2xl outline-1" aria-hidden="true"></i>
        </div>
      </div> -->
      <img src="/svg/Wales.svg" class="h-6" alt="Welsh flag">
    </div>
    </div>
        <div class="ml-3 flex-1 md:flex md:justify-between items-center">
      <p class="text-sm text-violet-600 font-semibold">For those living in Wales, you can access extra pre-application support.</p>
      <p class="mt-3 text-sm md:ml-6 md:mt-0">
        <a href="/extra-support-for-those-living-in-wales" class="whitespace-nowrap font-medium text-violet-700 hover:text-violet-600">
          Details
<i class="fa-solid fa-arrow-right text-sm"  aria-hidden="true"></i>
        </a>
      </p>
    </div>
      </div>
</div>
<div
  class="w-full py-12"
  x-init="checkUrl()"
  x-data="{ activeTab: 'tab0', checkUrl: function() { window.addEventListener('popstate', function (event) { let element = window.location.hash ? document.getElementById(window.location.hash.substring(1)) : null; element && element.tagName === 'BUTTON' ? document.getElementById(window.location.hash.substring(1)).click() : null; })}, urlUpdater: function(slug) { history.pushState(null, null, `/awards#${slug}`); const targetElement = document.getElementById(slug); if (targetElement) { targetElement.scrollIntoView({ behavior: 'smooth' }); } }, selectHs: function(i) {document.getElementById('tabs').value = `tab${i}` }, tabClass: function(i) { return this.activeTab === `tab${i}` ? 'border-b-4 border-b-amber-500' : 'bg-violet-50'}}"
>
  <div class="lg:hidden">
    <label for="tabs" class="sr-only">Select a tab</label>
    <select
    @change="activeTab = $event.target.value"
      id="tabs"
      name="tabs"
      class="block w-full rounded-md border-violet-300 focus:border-amber-500 focus:ring-amber-500"
    >
      {
        steps.map((step, i) => (
          <option value={`tab${i}`} selected={i == 0 && true}>
            {i + 1}. {step.name}
          </option>
        ))
      }
    </select>
  </div>
  <div class="hidden lg:block">
    <nav class="flex space-x-4" aria-label="Tabs">
      {
        steps.map((step, i) => (
          <button id={`${slugify(step.name, {lower: true, strict: true, locale: "en", trim: true,})}`}
            @click={`activeTab = 'tab${i}', selectHs('${i}'), urlUpdater('${slugify(step.name, {lower: true, strict: true, locale: "en", trim: true,})}')`}
            :class={`tabClass(${i})`}
            class={`border border-violet-700 flex-1 flex flex-col gap-3 justify-start items-center group rounded-t-md px-3 py-5 h-28 bg-violet-100 dark:bg-violet-950 dark:hover:border-b-4 dark:hover:border-b-amber-500/20 duration-200 shadow-3xl`}
          >
            <span
              class={`text-sm font-bold rounded-full h-6 w-6 flex justify-center items-center outline bg-violet-300 outline-violet-700 dark:outline-violet-300 text-violet-600 dark:text-violet-800`}
            >
              {i + 1}
            </span>

            <div class="flex-auto flex flex-col items-center justify-center">
              <span class={`text-sm font-medium text-violet-700 dark:text-violet-300`}>
                {step.name}
              </span>
            </div>
          </button>
        ))
      }
    </nav>
  </div>
{
  steps.map((step, i) => (
    <div id={`tab${i}`} x-show={`activeTab === 'tab${i}'`} class={`bg-violet-100 dark:bg-violet-950 rounded-b-md border-2 border-violet-300 dark:border-violet-700 shadow-sm`} x-cloak>
      <div
        class={`px-10 py-6 ${i === 0 && "rounded-tr-md"} ${i === 4 && "rounded-tl-md"}`}
      >

        {/* If the step is called Timeframe then don't use body. Generate it using  */}
        <div class={`prose prose-slate dark:prose-invert prose-sm prose-img:rounded-md prose-img:shadow-sm prose-img:w-full prose-a:font-bold prose-a:underline-offset-4 prose-a:decoration-amber-500 prose-a:decoration-1 hover:prose-a:decoration-2`} set:html={marked.parse(step.body)}></div>
      </div>
      <div class="rounded-b-md border-t border-violet-100 dark:border-violet-900 px-10 py-6 flex justify-between items-center">
        {step.next !== null && step.next_link === null ? (
          <button type="button" @click={`activeTab = 'tab${i+1}', selectHs('${i+1}'), urlUpdater('${slugify(steps[i+1].name, {lower: true, strict: true, locale: "en", trim: true,})}')`} class="rounded-full bg-amber-600 px-4 py-2.5 font-semibold text-violet-50 shadow-sm hover:bg-amber-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-amber-600 flex gap-2 items-center">
            <i class="fa-regular fa-circle-check text-base"></i>
            <span class="text-sm">{step.next}</span>
          </button>
        ) : (
          <a class="rounded-full bg-amber-600 px-4 py-2.5 font-semibold text-violet-50 shadow-sm hover:bg-amber-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-amber-600 flex gap-2 items-center" href={step.next_link }>
            <i class="fa-regular fa-circle-check text-base"></i>
            <span class="text-sm">{step.next}</span>
          </a>
        )}
        { step.help && <a href={step.help_link} class="flex gap-2 items-center"><i class="fa-solid fa-circle-question text-violet-500 dark:text-violet-300 text-base"></i> <span class="text-violet-600 dark:text-violet-300 text-sm">{step.help}</span></a> }
      </div>

    </div>
  ))
}
</div>
</Container>