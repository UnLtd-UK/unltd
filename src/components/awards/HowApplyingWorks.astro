---
/**
 * ApplicationRoundsProcess Component
 * Displays the application process as a beautiful journey timeline
 * Optionally shows the current round status widget
 */

import Icon from "@components/Icon.astro";
import {
    phases,
    outcomes,
    colorClasses,
    stepLinks,
    type PhaseColor,
    type StepLinkKey,
} from "@data/awardPhases";

interface Props {
    showEligibilityLink?: boolean;
    showResourceLinks?: boolean;
}

const { showEligibilityLink = false, showResourceLinks = false } = Astro.props;

// Helper to get step link based on props
function getStepLink(linkKey?: StepLinkKey) {
    if (!linkKey) return null;
    if (linkKey === "eligibility" && !showEligibilityLink) return null;
    if (linkKey !== "eligibility" && !showResourceLinks) return null;
    return stepLinks[linkKey];
}
---

<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
        <h2
            class="text-3xl md:text-4xl font-bold text-violet-900 dark:text-violet-100 mb-4"
        >
            How applying works
        </h2>
        <p
            class="text-lg text-violet-700 dark:text-violet-300 max-w-2xl mx-auto"
        >
            From preparation to outcome, here's what to expect at each stage of
            your Award application.
        </p>
    </div>

    <!-- Journey Timeline -->
    <div class="relative">
        <!-- Vertical connecting line (desktop) -->
        <div
            class="hidden lg:block absolute left-1/2 top-0 bottom-0 w-0.5 bg-linear-to-b from-emerald-300 via-violet-300 to-sky-300 dark:from-emerald-700 dark:via-violet-700 dark:to-sky-700 -translate-x-1/2"
        >
        </div>

        <!-- Phases -->
        <div class="space-y-8 lg:space-y-0">
            {
                phases.map((phase, phaseIndex) => {
                    const colors =
                        colorClasses[phase.color as keyof typeof colorClasses];
                    const isEven = phaseIndex % 2 === 0;

                    return (
                        <div class="relative lg:grid lg:grid-cols-2 lg:gap-8 lg:py-8">
                            {/* Timeline node (desktop) */}
                            <div class="hidden lg:flex absolute left-1/2 top-8 -translate-x-1/2 z-10">
                                <div
                                    class={`w-14 h-14 rounded-2xl ${colors.bg} text-white flex items-center justify-center shadow-lg ring-4 ring-white dark:ring-slate-900`}
                                >
                                    <Icon
                                        name={phase.icon.replace(
                                            "fa-solid fa-",
                                            "",
                                        )}
                                        style="solid"
                                        class="text-xl"
                                    />
                                </div>
                            </div>

                            {/* Phase content */}
                            <div
                                class={`lg:${isEven ? "pr-16 text-right" : "pl-16 col-start-2"}`}
                            >
                                {/* Phase card */}
                                <div
                                    class={`${colors.bgLight} rounded-3xl p-6 lg:p-8 border ${colors.border} shadow-sm`}
                                >
                                    {/* Mobile icon */}
                                    <div class="lg:hidden flex items-center gap-3 mb-4">
                                        <div
                                            class={`w-12 h-12 rounded-xl ${colors.bg} text-white flex items-center justify-center shadow-md`}
                                        >
                                            <Icon
                                                name={phase.icon.replace(
                                                    "fa-solid fa-",
                                                    "",
                                                )}
                                                style="solid"
                                                class="text-lg"
                                            />
                                        </div>
                                        <div>
                                            <h3
                                                class={`text-xl font-bold ${colors.textDark}`}
                                            >
                                                {phase.title}
                                            </h3>
                                            <p class={`text-sm ${colors.text}`}>
                                                {phase.subtitle}
                                            </p>
                                        </div>
                                    </div>

                                    {/* Desktop header */}
                                    <div
                                        class={`hidden lg:block mb-6 ${isEven ? "text-right" : "text-left"}`}
                                    >
                                        <h3
                                            class={`text-2xl font-bold ${colors.textDark}`}
                                        >
                                            {phase.title}
                                        </h3>
                                        <p class={`${colors.text}`}>
                                            {phase.subtitle}
                                        </p>
                                    </div>

                                    {/* Steps */}
                                    <div
                                        class={`space-y-3 ${isEven ? "lg:text-right" : "lg:text-left"}`}
                                    >
                                        {phase.steps.map((step) => (
                                            <div
                                                class={`flex items-start gap-3 ${isEven ? "lg:flex-row-reverse" : ""}`}
                                            >
                                                <div
                                                    class={`shrink-0 w-9 h-9 rounded-lg ${colors.bgLighter} ${colors.text} flex items-center justify-center`}
                                                >
                                                    <Icon
                                                        name={step.icon.replace(
                                                            "fa-solid fa-",
                                                            "",
                                                        )}
                                                        style="solid"
                                                        class="text-sm"
                                                    />
                                                </div>
                                                <div class="flex-1 min-w-0">
                                                    <h4
                                                        class={`font-semibold ${colors.textDark} text-sm`}
                                                    >
                                                        {step.title}
                                                    </h4>
                                                    <p
                                                        class={`text-sm ${colors.text} mt-0.5`}
                                                    >
                                                        {step.description}
                                                    </p>
                                                    {(() => {
                                                        const link =
                                                            getStepLink(
                                                                step.linkKey,
                                                            );
                                                        return (
                                                            link && (
                                                                <a
                                                                    href={
                                                                        link.href
                                                                    }
                                                                    class={`inline-flex items-center gap-1.5 text-xs font-medium ${colors.text} hover:underline mt-1.5`}
                                                                >
                                                                    {link.label}
                                                                    <Icon
                                                                        name={link.icon.replace(
                                                                            "fa-solid fa-",
                                                                            "",
                                                                        )}
                                                                        style="solid"
                                                                        class="text-[10px]"
                                                                    />
                                                                </a>
                                                            )
                                                        );
                                                    })()}
                                                </div>
                                            </div>
                                        ))}
                                    </div>
                                </div>
                            </div>

                            {/* Empty column for alternating layout */}
                            {isEven && <div class="hidden lg:block" />}
                        </div>
                    );
                })
            }
        </div>
    </div>

    <!-- Outcomes Section -->
    <div class="mt-4">
        <div class="text-center mb-8">
            <h3 class="text-2xl font-bold text-violet-900 dark:text-white mb-2">
                What happens next?
            </h3>
            <p class="text-violet-700 dark:text-violet-300">
                Whatever the outcome, we're here to support you.
            </p>
        </div>

        <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
            <!-- Success outcome -->
            <div
                class="relative overflow-hidden rounded-3xl bg-linear-to-br from-emerald-500 to-teal-600 p-6 lg:p-8 text-white shadow-xl"
            >
                <div
                    class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full -translate-y-1/2 translate-x-1/2"
                >
                </div>
                <div
                    class="absolute bottom-0 left-0 w-24 h-24 bg-white/5 rounded-full translate-y-1/2 -translate-x-1/2"
                >
                </div>

                <div class="relative">
                    <div class="flex items-center gap-3 mb-4">
                        <div
                            class="w-12 h-12 rounded-xl bg-white/20 flex items-center justify-center"
                        >
                            <Icon
                                name={outcomes.success.icon.replace(
                                    "fa-solid fa-",
                                    "",
                                )}
                                style="solid"
                                class="text-xl"
                            />
                        </div>
                        <div>
                            <p class="text-emerald-100 text-sm font-medium">
                                {outcomes.success.title}
                            </p>
                            <h4 class="text-lg font-bold">
                                {outcomes.success.subtitle}
                            </h4>
                        </div>
                    </div>

                    <ul class="space-y-2.5">
                        {
                            outcomes.success.items.map((item) => (
                                <li class="flex items-center gap-2.5 text-sm">
                                    <Icon
                                        name="check"
                                        style="solid"
                                        class="text-emerald-200"
                                    />
                                    <span class="text-white/90">{item}</span>
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>

            <!-- Unsuccessful outcome -->
            <div
                class="relative overflow-hidden rounded-3xl bg-linear-to-br from-violet-700 to-violet-800 dark:from-violet-800 dark:to-violet-900 p-6 lg:p-8 text-white shadow-xl border border-violet-600 dark:border-violet-700"
            >
                <div
                    class="absolute top-0 right-0 w-32 h-32 bg-white/5 rounded-full -translate-y-1/2 translate-x-1/2"
                >
                </div>
                <div
                    class="absolute bottom-0 left-0 w-24 h-24 bg-white/5 rounded-full translate-y-1/2 -translate-x-1/2"
                >
                </div>

                <div class="relative">
                    <div class="flex items-center gap-3 mb-4">
                        <div
                            class="w-12 h-12 rounded-xl bg-white/10 flex items-center justify-center"
                        >
                            <Icon
                                name={outcomes.unsuccessful.icon.replace(
                                    "fa-solid fa-",
                                    "",
                                )}
                                style="solid"
                                class="text-xl"
                            />
                        </div>
                        <div>
                            <p class="text-violet-300 text-sm font-medium">
                                {outcomes.unsuccessful.title}
                            </p>
                            <h4 class="text-lg font-bold">
                                {outcomes.unsuccessful.subtitle}
                            </h4>
                        </div>
                    </div>

                    <ul class="space-y-2.5">
                        {
                            outcomes.unsuccessful.items.map((item) => (
                                <li class="flex items-center gap-2.5 text-sm">
                                    <Icon
                                        name="arrow-right"
                                        style="solid"
                                        class="text-violet-400"
                                    />
                                    <span class="text-violet-200">{item}</span>
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
