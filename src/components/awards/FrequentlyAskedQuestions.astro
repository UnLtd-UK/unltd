---
import Icon from "@components/Icon.astro";
import Faq from "@components/Faq.astro";
import { faq } from "@data/faq.js";
---

<div class="mx-auto max-w-4xl">
  <h2
    class="text-4xl font-semibold tracking-tight text-violet-950 sm:text-5xl dark:text-white"
  >
    Frequently asked questions
  </h2>
  <dl
    class="mt-10 space-y-6 divide-y divide-violet-900/10 dark:divide-white/10"
  >
    {
      faq.map((item, i) => (
        <Faq question={item.question} answer={item.answer} i={i} />
      ))
    }
  </dl>
  <p class="mt-10 text-sm text-gray-600 dark:text-gray-400">
    Can't find what you're looking for?
    <a
      href="/contact/awards"
      class="font-semibold text-violet-600 hover:text-violet-500 dark:text-violet-400 dark:hover:text-violet-300"
    >
      Make an Award enquiry
      <Icon name="arrow-right" style="solid" class="text-xs ml-1" />
    </a>
  </p>
</div>
