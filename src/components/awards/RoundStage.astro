---
/**
 * RoundStage Grid (Static Astro)
 * Renders the 3 stage cards (Assessment, Interview, Result) in a 3-column grid.
 * Highlights the currently active stage based on the round phase.
 * Rendered at build time â€” rebuilt every ~2 hours via CI.
 */
import { getRoundData, getRoundStatus } from "./round";
import { stages, stageColourClasses } from "@data/stages";
import Icon from "@components/Icon.astro";

const { currentRound, nextRound, devDateTime } = getRoundData();
const { round: displayRound } = getRoundStatus({
    currentRound,
    nextRound,
    devDateTime,
});
const currentPhase = displayRound?.phase ?? "";
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    {
        stages.map((stage) => {
            const isActive =
                stage.phase === currentPhase ||
                (stage.phase === "assessment" &&
                    currentPhase === "awaiting-results");
            const colours = stageColourClasses[stage.colour];
            const hasSteps = stage.steps.length > 0;

            return (
                <div
                    class={`rounded-2xl border ${isActive ? colours.border : "border-violet-800/30"} bg-violet-950 p-6 flex flex-col h-full transition-all duration-300 ${isActive ? `shadow-lg ${colours.glow}` : ""}`}
                >
                    {/* Stage number label */}
                    <p
                        class={`text-xs font-semibold uppercase tracking-widest mb-3 ${isActive ? colours.text : "text-violet-500"}`}
                    >
                        Stage {stage.stage}
                    </p>

                    {/* Header */}
                    <div class="flex items-center gap-3 mb-4">
                        <div
                            class={`flex h-10 w-10 items-center justify-center rounded-lg ${colours.bg} shrink-0`}
                        >
                            <Icon
                                name={stage.icon}
                                style="solid"
                                class={colours.icon}
                            />
                        </div>
                        <div>
                            <div class="flex items-center gap-2">
                                <h3 class="text-lg font-bold text-white">
                                    {stage.title}
                                </h3>
                                {isActive && (
                                    <span
                                        class={`inline-flex items-center gap-1 rounded-full px-2 py-0.5 text-xs font-semibold ring-1 ${colours.badge}`}
                                    >
                                        <span class="relative flex h-1.5 w-1.5">
                                            <span class="absolute inline-flex h-full w-full animate-ping rounded-full bg-current opacity-75" />
                                            <span class="relative inline-flex h-1.5 w-1.5 rounded-full bg-current" />
                                        </span>
                                        Active
                                    </span>
                                )}
                            </div>
                            <p class="text-sm text-violet-400">
                                {stage.subtitle}
                            </p>
                        </div>
                    </div>

                    {/* Steps list (for stages with steps like Assessment/Interview) */}
                    {hasSteps && (
                        <div class="flex flex-col gap-3 mb-4 flex-1">
                            {stage.steps.map((step) => (
                                <div class="rounded-lg p-4">
                                    <div class="flex items-start gap-3">
                                        <div
                                            class={`flex h-8 w-8 items-center justify-center rounded-md ${colours.bg} shrink-0 mt-0.5`}
                                        >
                                            <Icon
                                                name={step.icon}
                                                style="solid"
                                                class={`${colours.icon} text-sm`}
                                            />
                                        </div>
                                        <div>
                                            <h4 class="font-semibold text-white text-sm">
                                                {step.title}
                                            </h4>
                                            <p class="text-xs text-violet-300 mt-0.5">
                                                {step.subtitle}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            ))}
                        </div>
                    )}

                    {/* Successful outcome (only for Result stage) */}
                    {stage.successful && (
                        <div class="rounded-lg bg-emerald-500/10 border border-emerald-500/20 p-4 mb-3">
                            <div class="flex items-center gap-2 mb-2">
                                <Icon
                                    name="circle-check"
                                    style="solid"
                                    class="text-emerald-400 text-sm"
                                />
                                <h4 class="font-semibold text-emerald-300 text-sm">
                                    {stage.successful.title}
                                </h4>
                            </div>
                            <p class="text-xs text-emerald-200/70">
                                {stage.successful.description}
                            </p>
                        </div>
                    )}

                    {/* Unsuccessful outcome */}
                    {stage.unsuccessful && (
                        <div class="rounded-lg bg-white/5 border border-white/10 p-4 mt-auto">
                            <div class="flex items-center gap-2 mb-2">
                                <Icon
                                    name="comment-dots"
                                    style="solid"
                                    class="text-violet-400 text-sm"
                                />
                                <h4 class="font-semibold text-violet-300 text-sm">
                                    {stage.unsuccessful.title}
                                </h4>
                            </div>
                            <p class="text-xs text-violet-400">
                                {stage.unsuccessful.description}
                            </p>
                        </div>
                    )}
                </div>
            );
        })
    }
</div>
