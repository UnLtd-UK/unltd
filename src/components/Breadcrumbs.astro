---
import Container from "@components/Container.astro";
const { breadcrumbs, styles } = Astro.props;
---

<Container bg={styles.bg}>
  <div class={`py-5 flex flex-col gap-12 ${styles.bg}`}>
    <div class="flex flex-row gap-5 justify-between">
      <nav class="flex" aria-label="Breadcrumb">
        <ol role="list" class="flex flex-col gap-4 md:flex-row md:items-center">
          <li>
            <div>
              <a
                href="/"
                class={`${styles.text} hover:text-violet-900 dark:hover:text-violet-100 transition`}
              >
                <i class={`fa-solid fa-house text-xs ${styles.breadcrumb}`}></i>
                <span class="sr-only">UnLtd</span>
              </a>
            </div>
          </li>

          {
            breadcrumbs.map((crumb) => (
              <li>
                <div class="flex items-center">
                  <i
                    class={`fa-solid fa-chevron-right ${styles.breadcrumb} text-xs`}
                  />
                  <a
                    href={`${crumb.path}`}
                    class={`ml-4 text-xs font-medium ${styles.breadcrumb} transition`}
                  >
                    {crumb.name}
                  </a>
                </div>
              </li>
            ))
          }
        </ol>
      </nav>
      <button
        type="button"
        class="hidden md:inline-flex items-center gap-x-1.5 rounded-md border border-violet-600 bg-violet-900 px-2.5 py-1.5 text-xs font-semibold text-violet-50 shadow-sm hover:bg-violet-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-violet-600"
        data-feedback-fish
      >
        Give us feedback
      </button>
    </div>
  </div>
</Container>
