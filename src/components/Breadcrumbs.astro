---
import Container from "@components/Container.astro";
const { breadcrumbs, styles } = Astro.props;
---

<Container bg={styles.bg}>
  <div class={`py-5 flex flex-col gap-12 ${styles.bg}`}>
    <div class="flex flex-row gap-5 justify-between">
      <nav class="flex" aria-label="Breadcrumb">
        <ol role="list" class="flex flex-col gap-4 md:flex-row md:items-center">
          <li>
            <div>
              <a
                href="/"
                class={`${styles.text} hover:text-violet-900 dark:hover:text-violet-100 transition`}
              >
                <i class={`fa-solid fa-house text-xs ${styles.breadcrumb}`}></i>
                <span class="sr-only">UnLtd</span>
              </a>
            </div>
          </li>

          {
            breadcrumbs.map((crumb) => (
              <li>
                <div class="flex items-center">
                  <i
                    class={`fa-solid fa-chevron-right ${styles.breadcrumb} text-xs`}
                  />
                  <a
                    href={`${crumb.slug}`}
                    class={`ml-4 text-xs font-medium ${styles.breadcrumb} transition`}
                  >
                    {crumb.name}
                  </a>
                </div>
              </li>
            ))
          }
        </ol>
      </nav>
    </div>
  </div>
</Container>
