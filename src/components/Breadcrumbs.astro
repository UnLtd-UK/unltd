---
import FeedbackWidget from "@components/FeedbackWidget.astro";
const { breadcrumbs } = Astro.props;
---


  <div class={`py-5 flex flex-col gap-12 bg-violet-50 dark:bg-violet-950 border-y border-dashed border-violet-400`}>
    <div class="flex flex-row gap-5 justify-between">
      <nav class="flex" aria-label="Breadcrumb">
        <ol role="list" class="flex flex-col gap-4 md:flex-row md:items-center">
          <li>
            <div>
              <a
                href="/"
                class={`text-violet-950 dark:text-violet-50 hover:text-violet-900 dark:hover:text-violet-100 transition`}
              >
                <i class={`fa-solid fa-house text-xs hover:text-violet-900 text-violet-800 dark:hover:text-violet-100 dark:text-violet-200`}></i>
                <span class="sr-only">UnLtd</span>
              </a>
            </div>
          </li>

          {
            breadcrumbs.map((crumb) => (
              <li>
                <div class="flex items-center">
                  <i
                    class={`fa-solid fa-chevron-right hover:text-violet-900 text-violet-800 dark:hover:text-violet-100 dark:text-violet-200 text-xs`}
                  />
                  <a
                    href={`${crumb.path}`}
                    class={`ml-4 text-xs font-medium hover:text-violet-900 text-violet-800 dark:hover:text-violet-100 dark:text-violet-200 transition`}
                  >
                    {crumb.name}
                  </a>
                </div>
              </li>
            ))
          }
        </ol>
      </nav>
      <FeedbackWidget />
    </div>
  </div>