---
// import nav from "../data/json/nav.json";
import Logo from "./SlateLogo.astro";

import { navigation } from "../data/navigation.js";
let nav = navigation.code;
---

<footer class="bg-slate-50" aria-labelledby="footer-heading">
  <h2 id="footer-heading" class="sr-only">Footer</h2>
  <div class="mx-auto max-w-7xl px-6 pb-8 pt-16 sm:pt-24 lg:px-8 lg:pt-32">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
      <div class="space-y-8">
        <Logo />
        <a href="https://goo.gl/maps/AL5FhXFppVMmZsob6" target="_blank"
          ><address class="text-sm text-slate-600 flex flex-col">
            <span>{nav.footer.address.address1}</span>
            <span>{nav.footer.address.address2}</span>
            <span>{nav.footer.address.address3}</span>
          </address>
        </a>
        <div class="flex space-x-6">
          {
            nav.footer.socials.map((social) => (
              <a href={social.link} class="text-slate-400 hover:text-slate-500">
                <span class="sr-only">{social.name}</span>
                <i class={`h-6 w-6 ${social.icon}`} />
              </a>
            ))
          }
        </div>
      </div>
      <div class="mt-16 grid grid-cols-2 gap-8 xl:col-span-2 xl:mt-0">
        <div class="md:grid md:grid-cols-2 md:gap-8">
          {
            nav.footer.links.map((link, index) => {
              if (index < 2)
                return (
                  <div class={index == 1 && `mt-10 md:mt-0`}>
                    <h3 class="text-sm font-semibold leading-6 text-slate-900">
                      {link.name}
                    </h3>
                    <ul role="list" class="mt-6 space-y-4">
                      {link.items.map((item, i) => (
                        <li>
                          <a
                            href={item.link ? item.link : `/${item.slug}`}
                            class="text-sm leading-6 text-slate-600 hover:text-slate-900"
                          >
                            {item.name}
                            {!item.slug && item.link && (
                              <i class="text-xs fa-solid fa-arrow-up-right-from-square" />
                            )}
                          </a>
                          {item.description && (
                            <span class="text-xs text-slate-500">
                              {item.description}
                            </span>
                          )}
                        </li>
                      ))}
                    </ul>
                  </div>
                );
            })
          }
        </div>
        <div class="md:grid md:grid-cols-2 md:gap-8">
          {
            nav.footer.links.map((link, index) => {
              if (index > 1)
                return (
                  <div class={index == 3 && `mt-10 md:mt-0`}>
                    <h3 class="text-sm font-semibold leading-6 text-slate-900">
                      {link.name}
                    </h3>
                    <ul role="list" class="mt-6 space-y-4">
                      {link.items.map((item, i) => (
                        <li>
                          <a
                            href={item.link ? item.link : `/${item.slug}`}
                            class="text-sm leading-6 text-slate-600 hover:text-slate-900"
                          >
                            {item.name}
                            {!item.slug && item.link && (
                              <i class="text-xs fa-solid fa-arrow-up-right-from-square" />
                            )}
                          </a>
                          {item.description && (
                            <span class="text-xs text-slate-500">
                              {item.description}
                            </span>
                          )}
                        </li>
                      ))}
                    </ul>
                  </div>
                );
            })
          }
        </div>
      </div>
    </div>
    <div class="mt-16 border-t border-slate-900/10 pt-8 sm:mt-20 lg:mt-24">
      <p class="text-xs leading-5 text-slate-500">
        &copy; 2023 UnLtd, Inc. All rights reserved.
      </p>
    </div>
  </div>
</footer>
