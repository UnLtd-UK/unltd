---
import Input from "./Input.astro";
import Select from "./Select.astro";
// import Datalist from "../../components/form/fields/Datalist.astro";
import Textarea from "./Textarea.astro";
import Checkboxes from "./Checkboxes.astro";
import Radios from "./Radios.astro";
const {
  name,
  description,
  slug,
  type,
  input_type,
  required = false,
  disabled = false,
  options = false,
  max_length = false,
  prefix = false,
  suffix = false,
  alias = false,
} = Astro.props;
---

<div>
  {
    () => {
      switch (type) {
        case "Input":
          return (
            <Input
              name={name}
              description={description}
              slug={slug}
              input_type={input_type}
              required={required}
              disabled={disabled}
              prefix={prefix}
              suffix={suffix}
            />
          );
        case "Select":
          return (
            <Select
              name={name}
              description={description}
              slug={slug}
              required={required}
              options={options}
              disabled={disabled}
              applications={alias}
            />
          );
        case "Checkboxes":
          return (
            <Checkboxes
              name={name}
              description={description}
              slug={slug}
              required={required}
              options={options}
              disabled={disabled}
            />
          );
        case "Textarea":
          return (
            <Textarea
              name={name}
              description={description}
              slug={slug}
              required={required}
              disabled={disabled}
              max_length={max_length}
            />
          );
        // case "Datalist":
        //   return (
        //     <Datalist
        //       name={name}
        //       description={description}
        //       slug={slug}
        //       required={required}
        //       options={options}
        //       disabled={disabled}
        //     />
        //   );
        case "Radios":
          return (
            <Radios
              name={name}
              description={description}
              slug={slug}
              required={required}
              options={options}
              disabled={disabled}
            />
          );
        default:
          return (
            <div>
              <p class="text-red-700 text-xs font-italic">type: {type}</p>
              <p class="text-red-700 text-xs font-bold">name: {name}</p>
              <p class="text-red-700 text-xs">description: {description}</p>
              <p class="text-red-700 text-xs">slug: {slug} </p>
              <p class="text-red-700 text-xs">required: {required}</p>
              <p class="text-red-700 text-xs">options: {options}</p>
              <p class="text-red-700 text-xs">disabled: {disabled}</p>
            </div>
          );
      }
    }
  }
</div>
