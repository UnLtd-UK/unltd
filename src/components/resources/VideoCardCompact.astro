---
/**
 * VideoCardCompact Component
 * A balanced card for video resources with preview area
 */

import Icon from "@components/Icon.astro";

interface Props {
    name: string;
    description: string;
    href: string;
    category?: string;
}

const { name, description, href, category } = Astro.props;

const categoryLabels: Record<string, string> = {
    legal: "Legal & Policies",
    application: "Application Help",
    funding: "Funding & Budget",
    business: "Business Support",
    wellbeing: "Wellbeing",
    general: "General",
};

const categoryLabel = category ? categoryLabels[category] || category : null;
---

<a
    href={href}
    target="_blank"
    rel="noopener noreferrer"
    class="group relative flex flex-col overflow-hidden rounded-2xl bg-linear-to-br from-rose-900/50 via-pink-800/30 to-rose-900/50 ring-1 ring-rose-600/30 hover:ring-rose-400/50 transition-all duration-300 hover:shadow-xl hover:shadow-rose-500/10 hover:-translate-y-0.5"
>
    {/* Video preview area */}
    <div
        class="relative aspect-video bg-linear-to-br from-rose-800/50 to-pink-900/50 flex items-center justify-center overflow-hidden"
    >
        {/* Decorative gradient overlay */}
        <div
            class="absolute inset-0 bg-linear-to-br from-rose-600/10 to-pink-600/10"
        >
        </div>

        {/* Play button */}
        <div
            class="relative z-10 flex h-14 w-14 items-center justify-center rounded-full bg-rose-500/90 ring-4 ring-rose-400/20 group-hover:bg-rose-400 group-hover:ring-rose-300/40 group-hover:scale-110 transition-all duration-300 shadow-lg shadow-rose-500/20"
        >
            <Icon name="play" style="solid" class="h-6 w-6 text-white ml-1" />
        </div>

        {/* Video badge */}
        <div class="absolute top-3 left-3">
            <span
                class="inline-flex items-center gap-1.5 rounded-full bg-rose-900/80 backdrop-blur-sm px-3 py-1.5 text-xs font-semibold text-rose-200 ring-1 ring-rose-500/30"
            >
                <Icon name="video" style="solid" class="h-3 w-3" />
                Video
            </span>
        </div>

        {/* Category badge */}
        {
            categoryLabel && (
                <div class="absolute top-3 right-3">
                    <span class="inline-flex items-center rounded-full bg-black/40 backdrop-blur-sm px-2.5 py-1 text-xs font-medium text-rose-200 ring-1 ring-white/10">
                        {categoryLabel}
                    </span>
                </div>
            )
        }
    </div>

    {/* Content */}
    <div class="flex-1 p-4">
        <h3
            class="text-base font-semibold text-rose-100 group-hover:text-white transition-colors duration-200 line-clamp-2 mb-2"
        >
            {name}
        </h3>
        <p class="text-sm text-rose-300/70 line-clamp-2 mb-3">
            {description}
        </p>
        <div
            class="flex items-center gap-2 text-sm font-medium text-rose-400 group-hover:text-rose-300 transition-colors"
        >
            <span>Watch video</span>
            <Icon
                name="arrow-up-right-from-square"
                style="solid"
                class="h-3.5 w-3.5"
            />
        </div>
    </div>
</a>
