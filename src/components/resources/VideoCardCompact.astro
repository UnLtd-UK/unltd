---
/**
 * VideoCardCompact Component
 * A balanced horizontal card for video resources - consistent with other card types
 */

import Icon from "@components/Icon.astro";
import { getTopicLabel, getTopicConfig } from "@data/topics";

interface Props {
    name: string;
    description: string;
    href: string;
    topic?: string;
}

const { name, description, href, topic } = Astro.props;

const topicLabel = getTopicLabel(topic);
const topicConf = getTopicConfig(topic);
---

<a
    href={href}
    target="_blank"
    rel="noopener noreferrer"
    class="group relative flex overflow-hidden rounded-2xl bg-linear-to-br from-rose-900/50 via-pink-800/30 to-rose-900/50 ring-1 ring-rose-600/30 hover:ring-rose-400/50 transition-all duration-300 hover:shadow-xl hover:shadow-rose-500/10 hover:-translate-y-0.5"
>
    {/* Video icon sidebar */}
    <div
        class="flex flex-col items-center justify-center w-20 bg-linear-to-b from-rose-600/20 to-rose-700/20 border-r border-rose-500/20"
    >
        <div
            class="flex h-12 w-12 items-center justify-center rounded-xl bg-rose-500/25 ring-1 ring-rose-400/30 group-hover:bg-rose-500/35 transition-all duration-300"
        >
            <Icon
                name="play"
                style="solid"
                class="h-6 w-6 text-rose-200 group-hover:text-rose-100 ml-0.5"
            />
        </div>
    </div>

    <div class="flex-1 p-5">
        {/* Header */}
        <div class="flex items-start justify-between gap-3 mb-3">
            <span
                class="inline-flex items-center gap-1.5 rounded-full bg-rose-600/30 px-3 py-1 text-xs font-semibold text-rose-200 ring-1 ring-rose-500/30"
            >
                <Icon name="video" style="solid" class="h-3 w-3" />
                Video
            </span>
            {
                topicLabel && (
                    <span
                        class={`inline-flex items-center gap-1.5 rounded-full px-2.5 py-1 text-xs font-medium ring-1 ${topicConf ? `${topicConf.bgClass} ${topicConf.textClass} ${topicConf.ringClass}` : "bg-rose-800/40 text-rose-300 ring-rose-600/30"}`}
                    >
                        {topicConf && (
                            <Icon
                                name={topicConf.icon}
                                style="solid"
                                class="h-3 w-3"
                            />
                        )}
                        {topicLabel}
                    </span>
                )
            }
        </div>

        {/* Content */}
        <h3
            class="text-lg font-semibold text-rose-100 group-hover:text-white transition-colors duration-200 line-clamp-2 mb-2"
        >
            {name}
        </h3>
        <p class="text-sm leading-relaxed text-rose-300/70 line-clamp-2 mb-4">
            {description}
        </p>

        {/* Footer */}
        <div
            class="flex items-center gap-2 text-sm font-medium text-rose-400 group-hover:text-rose-300 transition-colors"
        >
            <span>Watch video</span>
            <Icon
                name="arrow-up-right-from-square"
                style="solid"
                class="h-3.5 w-3.5"
            />
        </div>
    </div>
</a>
