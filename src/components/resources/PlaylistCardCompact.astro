---
/**
 * PlaylistCardCompact Component
 * A balanced card for playlist resources with stacked effect
 */

import Icon from "@components/Icon.astro";

interface Props {
    name: string;
    description: string;
    href: string;
    category?: string;
    videoCount?: number;
}

const { name, description, href, category, videoCount } = Astro.props;

const categoryLabels: Record<string, string> = {
    legal: "Legal & Policies",
    application: "Application Help",
    funding: "Funding & Budget",
    business: "Business Support",
    wellbeing: "Wellbeing",
    general: "General",
};

const categoryLabel = category ? categoryLabels[category] || category : null;
---

<a
    href={href}
    target="_blank"
    rel="noopener noreferrer"
    class="group relative flex flex-col overflow-hidden rounded-2xl bg-linear-to-br from-purple-900/50 via-violet-800/30 to-fuchsia-900/50 ring-1 ring-purple-600/30 hover:ring-purple-400/50 transition-all duration-300 hover:shadow-xl hover:shadow-purple-500/10 hover:-translate-y-0.5"
>
    {/* Playlist preview header with stacked video effect */}
    <div
        class="relative aspect-video bg-linear-to-br from-purple-800/50 to-fuchsia-900/50 flex items-center justify-center overflow-hidden p-4"
    >
        {/* Stacked cards effect */}
        <div class="absolute inset-6 flex items-center justify-center">
            <div
                class="absolute w-full h-full bg-purple-700/30 rounded-xl transform translate-x-3 translate-y-3 ring-1 ring-purple-500/20"
            >
            </div>
            <div
                class="absolute w-full h-full bg-purple-600/40 rounded-xl transform translate-x-1.5 translate-y-1.5 ring-1 ring-purple-400/30"
            >
            </div>
            <div
                class="relative w-full h-full bg-purple-500/50 rounded-xl ring-1 ring-purple-400/40 flex items-center justify-center"
            >
                <div
                    class="flex h-12 w-12 items-center justify-center rounded-full bg-purple-400/80 ring-2 ring-purple-300/50 group-hover:bg-purple-300 group-hover:scale-110 transition-all duration-300"
                >
                    <Icon
                        name="play"
                        style="solid"
                        class="h-5 w-5 text-purple-900 ml-0.5"
                    />
                </div>
            </div>
        </div>

        {/* Playlist badge */}
        <div class="absolute top-3 left-3">
            <span
                class="inline-flex items-center gap-1.5 rounded-full bg-purple-900/80 backdrop-blur-sm px-3 py-1.5 text-xs font-semibold text-purple-200 ring-1 ring-purple-500/30"
            >
                <Icon name="list" style="solid" class="h-3 w-3" />
                Playlist
            </span>
        </div>

        {/* Video count badge */}
        {
            videoCount && (
                <div class="absolute top-3 right-3">
                    <span class="inline-flex items-center gap-1 rounded-full bg-fuchsia-600/60 backdrop-blur-sm px-2.5 py-1 text-xs font-semibold text-fuchsia-100 ring-1 ring-fuchsia-400/40">
                        {videoCount} videos
                    </span>
                </div>
            )
        }

        {/* Category badge */}
        {
            categoryLabel && !videoCount && (
                <div class="absolute top-3 right-3">
                    <span class="inline-flex items-center rounded-full bg-black/40 backdrop-blur-sm px-2.5 py-1 text-xs font-medium text-purple-200 ring-1 ring-white/10">
                        {categoryLabel}
                    </span>
                </div>
            )
        }
    </div>

    {/* Content */}
    <div class="flex-1 p-4">
        <h3
            class="text-base font-semibold text-purple-100 group-hover:text-white transition-colors duration-200 line-clamp-2 mb-2"
        >
            {name}
        </h3>
        <p class="text-sm text-purple-300/70 line-clamp-2 mb-3">
            {description}
        </p>
        <div
            class="flex items-center gap-2 text-sm font-medium text-purple-400 group-hover:text-purple-300 transition-colors"
        >
            <span>Watch playlist</span>
            <Icon
                name="arrow-up-right-from-square"
                style="solid"
                class="h-3.5 w-3.5"
            />
        </div>
    </div>
</a>
