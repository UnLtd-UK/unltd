---
/**
 * PlaylistCardCompact Component
 * A balanced horizontal card for playlist resources - consistent with other card types
 */

import Icon from "@components/Icon.astro";
import { getTopicLabel, getTopicConfig } from "@data/topics";

interface Props {
    name: string;
    description: string;
    href: string;
    topic?: string;
    videoCount?: number;
}

const { name, description, href, topic, videoCount } = Astro.props;

const topicLabel = getTopicLabel(topic);
const topicConf = getTopicConfig(topic);
---

<a
    href={href}
    target="_blank"
    rel="noopener noreferrer"
    class="group relative flex overflow-hidden rounded-2xl bg-linear-to-br from-purple-900/50 via-violet-800/30 to-fuchsia-900/50 ring-1 ring-purple-600/30 hover:ring-purple-400/50 transition-all duration-300 hover:shadow-xl hover:shadow-purple-500/10 hover:-translate-y-0.5"
>
    {/* Playlist icon sidebar with stacked effect */}
    <div
        class="flex flex-col items-center justify-center w-20 bg-linear-to-b from-purple-600/20 to-fuchsia-700/20 border-r border-purple-500/20 relative"
    >
        {/* Stacked cards mini effect */}
        <div class="relative">
            <div
                class="absolute h-10 w-10 rounded-lg bg-purple-700/30 transform translate-x-1 translate-y-1 ring-1 ring-purple-500/20"
            >
            </div>
            <div
                class="relative flex h-12 w-12 items-center justify-center rounded-xl bg-purple-500/25 ring-1 ring-purple-400/30 group-hover:bg-purple-500/35 transition-all duration-300"
            >
                <Icon
                    name="list"
                    style="solid"
                    class="h-6 w-6 text-purple-200 group-hover:text-purple-100"
                />
            </div>
        </div>
    </div>

    <div class="flex-1 p-5">
        {/* Header */}
        <div class="flex items-start justify-between gap-3 mb-3">
            <span
                class="inline-flex items-center gap-1.5 rounded-full bg-purple-600/30 px-3 py-1 text-xs font-semibold text-purple-200 ring-1 ring-purple-500/30"
            >
                <Icon name="list" style="solid" class="h-3 w-3" />
                Playlist
            </span>
            <div class="flex flex-wrap gap-2 justify-end">
                {
                    videoCount && (
                        <span class="inline-flex items-center gap-1 rounded-full bg-fuchsia-600/40 px-2.5 py-1 text-xs font-medium text-fuchsia-200 ring-1 ring-fuchsia-400/30">
                            {videoCount} videos
                        </span>
                    )
                }
                {
                    topicLabel && (
                        <span
                            class={`inline-flex items-center gap-1.5 rounded-full px-2.5 py-1 text-xs font-medium ring-1 ${topicConf ? `${topicConf.bgClass} ${topicConf.textClass} ${topicConf.ringClass}` : "bg-purple-800/40 text-purple-300 ring-purple-600/30"}`}
                        >
                            {topicConf && (
                                <Icon
                                    name={topicConf.icon}
                                    style="solid"
                                    class="h-3 w-3"
                                />
                            )}
                            {topicLabel}
                        </span>
                    )
                }
            </div>
        </div>

        {/* Content */}
        <h3
            class="text-lg font-semibold text-purple-100 group-hover:text-white transition-colors duration-200 line-clamp-2 mb-2"
        >
            {name}
        </h3>
        <p class="text-sm leading-relaxed text-purple-300/70 line-clamp-2 mb-4">
            {description}
        </p>

        {/* Footer */}
        <div
            class="flex items-center gap-2 text-sm font-medium text-purple-400 group-hover:text-purple-300 transition-colors"
        >
            <span>Watch playlist</span>
            <Icon
                name="arrow-up-right-from-square"
                style="solid"
                class="h-3.5 w-3.5"
            />
        </div>
    </div>
</a>
