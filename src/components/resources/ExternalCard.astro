---
/**
 * ExternalCard Component
 * A distinctive card for external link resources
 */

import Icon from "@components/Icon.astro";

interface Props {
    name: string;
    description: string;
    href: string;
    category?: string;
}

const { name, description, href, category } = Astro.props;

const categoryLabels: Record<string, string> = {
    legal: "Legal & Policies",
    application: "Application Help",
    funding: "Funding & Budget",
    business: "Business Support",
    wellbeing: "Wellbeing",
    general: "General",
};

const categoryLabel = category ? categoryLabels[category] || category : null;

// Try to extract domain from URL for display
let domain = "";
try {
    const url = new URL(href);
    domain = url.hostname.replace("www.", "");
} catch {
    domain = "External link";
}
---

<a
    href={href}
    target="_blank"
    rel="noopener noreferrer"
    class="group relative flex flex-col overflow-hidden rounded-2xl bg-linear-to-br from-sky-900/60 via-blue-800/40 to-sky-900/60 ring-1 ring-sky-600/40 hover:ring-sky-400/60 transition-all duration-300 hover:shadow-xl hover:shadow-sky-500/15 hover:-translate-y-1"
>
    <div class="p-5">
        {/* Header */}
        <div class="flex items-start justify-between gap-3 mb-4">
            <div
                class="flex h-11 w-11 items-center justify-center rounded-xl bg-sky-500/25 ring-1 ring-sky-400/40 group-hover:bg-sky-500/35 transition-all duration-300"
            >
                <Icon
                    name="link"
                    style="solid"
                    class="h-5 w-5 text-sky-300 group-hover:text-sky-200"
                />
            </div>
            <div class="flex flex-wrap gap-2 justify-end">
                <span
                    class="inline-flex items-center gap-1 rounded-full bg-sky-600/40 px-2.5 py-1 text-xs font-semibold text-sky-200 ring-1 ring-sky-500/40"
                >
                    <Icon name="globe" style="solid" class="h-3 w-3" />
                    External
                </span>
                {
                    categoryLabel && (
                        <span class="inline-flex items-center rounded-full bg-sky-800/50 px-2.5 py-1 text-xs font-medium text-sky-300 ring-1 ring-sky-600/40">
                            {categoryLabel}
                        </span>
                    )
                }
            </div>
        </div>

        {/* Content */}
        <h3
            class="text-lg font-semibold text-sky-100 group-hover:text-white transition-colors duration-200 line-clamp-2 mb-2"
        >
            {name}
        </h3>
        <p class="text-sm leading-relaxed text-sky-300/80 line-clamp-2 mb-4">
            {description}
        </p>

        {/* Domain display */}
        <div
            class="flex items-center gap-2 px-3 py-2 rounded-lg bg-sky-800/40 ring-1 ring-sky-700/40"
        >
            <Icon
                name="arrow-up-right-from-square"
                style="solid"
                class="h-3.5 w-3.5 text-sky-400"
            />
            <span class="text-xs font-medium text-sky-300 truncate"
                >{domain}</span
            >
        </div>
    </div>

    {/* Hover indicator */}
    <div
        class="mt-auto px-5 pb-4 flex items-center justify-between border-t border-sky-700/30 pt-4"
    >
        <span
            class="text-sm font-medium text-sky-400 group-hover:text-sky-300 transition-colors"
        >
            Visit link
        </span>
        <div
            class="flex h-7 w-7 items-center justify-center rounded-full bg-sky-700/50 group-hover:bg-sky-600/70 transition-all duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5"
        >
            <Icon
                name="arrow-up-right-from-square"
                style="solid"
                class="h-3.5 w-3.5 text-sky-300 group-hover:text-white"
            />
        </div>
    </div>
</a>
