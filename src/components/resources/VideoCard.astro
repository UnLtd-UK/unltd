---
/**
 * VideoCard Component
 * A distinctive card for video resources with playback styling
 */

import Icon from "@components/Icon.astro";
import { getTopicLabel, getTopicConfig } from "@data/topics";

interface Props {
    name: string;
    description: string;
    href: string;
    topic?: string;
    thumbnail?: string;
}

const { name, description, href, topic, thumbnail } = Astro.props;

const topicLabel = getTopicLabel(topic);
const topicConf = getTopicConfig(topic);
---

<a
    href={href}
    target="_blank"
    rel="noopener noreferrer"
    class="group relative flex flex-col overflow-hidden rounded-2xl bg-linear-to-br from-rose-900/60 via-pink-800/40 to-rose-900/60 ring-1 ring-rose-600/40 hover:ring-rose-400/60 transition-all duration-300 hover:shadow-xl hover:shadow-rose-500/15 hover:-translate-y-1"
>
    {/* Video preview area with play button */}
    <div
        class="relative aspect-video bg-linear-to-br from-rose-800/60 to-pink-900/60 flex items-center justify-center overflow-hidden"
    >
        {
            thumbnail ? (
                <img
                    src={thumbnail}
                    alt=""
                    class="absolute inset-0 w-full h-full object-cover opacity-60 group-hover:opacity-80 transition-opacity"
                />
            ) : (
                <div class="absolute inset-0 bg-linear-to-br from-rose-700/30 to-pink-800/30" />
            )
        }

        {/* Play button */}
        <div
            class="relative z-10 flex h-16 w-16 items-center justify-center rounded-full bg-rose-500/90 ring-4 ring-rose-400/30 group-hover:bg-rose-400 group-hover:ring-rose-300/50 group-hover:scale-110 transition-all duration-300 shadow-lg shadow-rose-500/30"
        >
            <Icon name="play" style="solid" class="h-7 w-7 text-white ml-1" />
        </div>

        {/* Video badge */}
        <div class="absolute top-3 left-3">
            <span
                class="inline-flex items-center gap-1.5 rounded-full bg-rose-900/80 backdrop-blur-sm px-3 py-1.5 text-xs font-semibold text-rose-200 ring-1 ring-rose-500/40"
            >
                <Icon name="video" style="solid" class="h-3 w-3" />
                Video
            </span>
        </div>

        {/* Topic badge */}
        {
            topicLabel && (
                <div class="absolute top-3 right-3">
                    <span
                        class={`inline-flex items-center gap-1.5 rounded-full backdrop-blur-sm px-2.5 py-1 text-xs font-medium ring-1 ${topicConf ? `${topicConf.bgClass} ${topicConf.textClass} ${topicConf.ringClass}` : "bg-black/50 text-rose-200 ring-white/10"}`}
                    >
                        {topicConf && (
                            <Icon
                                name={topicConf.icon}
                                style="solid"
                                class="h-3 w-3"
                            />
                        )}
                        {topicLabel}
                    </span>
                </div>
            )
        }
    </div>

    {/* Content */}
    <div class="flex-1 p-5">
        <h3
            class="text-lg font-semibold text-rose-100 group-hover:text-white transition-colors duration-200 line-clamp-2 mb-2"
        >
            {name}
        </h3>
        <p class="text-sm leading-relaxed text-rose-300/80 line-clamp-2">
            {description}
        </p>
    </div>

    {/* Footer */}
    <div class="px-5 pb-4 flex items-center justify-between">
        <span
            class="text-sm font-medium text-rose-400 group-hover:text-rose-300 transition-colors"
        >
            Watch video
        </span>
        <Icon
            name="arrow-up-right-from-square"
            style="solid"
            class="h-4 w-4 text-rose-400 group-hover:text-rose-300 transition-colors"
        />
    </div>
</a>
