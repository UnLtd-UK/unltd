---
const {
  name,
  description,
  tag,
  author,
  authorpic,
  date,
  mins,
  thumbnail,
  thumbnailalt,
} = Astro.props;
---

<div class="flex flex-col overflow-hidden rounded-lg shadow-lg">
  <div class="flex-shrink-0">
    <img class="h-48 w-full object-cover" src={thumbnail} alt={thumbnailalt} />
  </div>
  <div class="flex flex-1 flex-col justify-between bg-white p-6">
    <div class="flex-1">
      <p class="text-sm font-medium text-orange-600">
        <a href="#" class="hover:underline">{tag}</a>
      </p>
      <a href="#" class="mt-2 block">
        <p class="text-xl font-semibold text-violet-900">
          {name}
        </p>
        <p class="mt-3 text-base text-violet-500">
          {description}
        </p>
      </a>
    </div>
    <div class="mt-6 flex items-center">
      <div class="flex-shrink-0">
        <a href="#">
          <span class="sr-only">{author}</span>
          <img class="h-10 w-10 rounded-full" src={authorpic} alt="" />
        </a>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-violet-900">
          <a href="/" class="hover:underline">{author}</a>
        </p>
        <div class="flex space-x-1 text-sm text-violet-500">
          <time datetime="2020-03-10">{date}</time>
          <span aria-hidden="true">&middot;</span>
          <span>{mins} min read</span>
        </div>
      </div>
    </div>
  </div>
</div>
