---
const { title } = Astro.props;
---

<div class="">
  <div class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:px-8 lg:py-40">
    <div class="mx-auto max-w-4xl divide-y divide-violet-900/10">
      <h2 class="text-2xl font-bold leading-10 tracking-tight text-violet-900">
        {title}
      </h2>
      <dl class="mt-10 space-y-6 divide-y divide-violet-900/10">
        <slot />
      </dl>
    </div>
  </div>
</div>
