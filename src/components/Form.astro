  <div class="mx-auto grid max-w-7xl grid-cols-1 lg:grid-cols-2">
    <div class="relative px-6 pb-20 pt-24 sm:pt-32 lg:static lg:px-8 lg:py-48">
      <div class="mx-auto max-w-xl lg:mx-0 lg:max-w-lg">
        <div
          class="absolute inset-y-0 left-0 -z-10 w-full overflow-hidden bg-slate-50 dark:bg-slate-950 lg:w-1/2"
        >
        </div>

        <h2
          class="text-3xl font-bold tracking-tight text-slate-900 dark:text-slate-200"
        >
          {name}
        </h2>
        <p class="mt-6 text-lg leading-8 text-slate-600 dark:text-slate-400">
          {description}
        </p>

        <div class="flex items-center gap-3 mt-6">
          <i class="text-slate-500 fa-regular fa-envelope"></i>
          <a
            class="text-slate-800 dark:text-slate-400 text-lg leading-8 font-bold underline underline-offset-4 decoration-yellow-500 decoration-1 hover:decoration-2"
            href=`mailto:${email}`>{email}</a
          >
        </div>

