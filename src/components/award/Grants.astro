---
import Container from "@components/Container.astro";
import Grant from "@components/award/Grant.astro";
import { grants } from "@data/grants.js";
---

<Container bg="bg-violet-100 dark:bg-violet-900">
  <div class="py-20 flex flex-col gap-20">
    <div class="mx-auto max-w-4xl text-center">
      <h2
        id="funding"
        class="text-base font-semibold leading-7 text-amber-500 dark:text-amber-500"
      >
        Funding
      </h2>
      <p
        class="mt-2 text-2xl font-bold tracking-tight text-violet-900 dark:text-violet-100 sm:text-5xl"
      >
        Grants
      </p>
      <p
        class="mx-auto mt-6 max-w-2xl text-center text-lg leading-8 text-violet-800 dark:text-violet-200"
      >
        We combine funding and support to help you to get started or grow.
        Depending on your stage of development we can offer up to Â£18,000.
      </p>
    </div>

    <ul class="flex flex-col lg:flex-row gap-6">
      {
        grants.map((grant) => (
          <Grant
            name={grant.name}
            description={grant.description}
            amount={grant.amount}
            incorporated={grant.incorporated}
            selling_goods_and_services={grant.selling_goods_and_services}
            feature_1={grant.feature_1}
            feature_2={grant.feature_2}
          />
        ))
      }
    </ul>
  </div>
</Container>
