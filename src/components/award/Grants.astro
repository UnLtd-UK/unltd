---
const grants = [
  {
    name: "Starting up",
    description:
      "You have an idea or have started to make a difference to people's lives, your community, or have ambitions to create change at a national level.",
    amount: "8,000",
    features: [
      {
        name: "This is feature one",
        icon: "fa-solid fa-circle-check",
      },
      {
        name: "This is feature two",
        icon: "fa-solid fa-circle-check",
      },
      {
        name: "This is feature three",
        icon: "fa-solid fa-circle-check",
      },
    ],
    eligibility: [
      {
        name: "Incorporated",
        value: "Not yet or less 4 years",
        icon: "fa-solid fa-pen-nib",
      },
      {
        name: "Selling goods and services",
        value: "Less than 1 year",
        icon: "fa-solid fa-bag-shopping",
      },
      {
        name: "Working with marginalised people",
        value: "Not yet or yes",
        icon: "fa-solid fa-people-line",
      },
    ],
  },
  {
    name: "Scaling up",
    description:
      "You are already running a business that is making a positive difference and you have compelling evidence of your impact.",
    amount: "18,000",
    features: [
      {
        name: "This is feature one",
        icon: "fa-solid fa-circle-check",
      },
      {
        name: "This is feature two",
        icon: "fa-solid fa-circle-check",
      },
      {
        name: "This is feature three",
        icon: "fa-solid fa-circle-check",
      },
    ],
    eligibility: [
      {
        name: "Incorporated",
        value: "Less 4 years",
        icon: "fa-solid fa-pen-nib",
      },
      {
        name: "Selling goods and services",
        value: "1 to 4 years",
        icon: "fa-solid fa-bag-shopping",
      },
      {
        name: "Working with marginalised people",
        value: "Yes",
        icon: "fa-solid fa-people-line",
      },
    ],
  },
];
---

<div
  class="mx-auto mt-16 max-w-7xl px-6 sm:mt-32 lg:px-8 bg-slate-100 dark:bg-slate-900"
>
  <div class="mx-auto max-w-4xl text-center">
    <h1
      class="text-base font-semibold leading-7 text-amber-600 dark:text-amber-500"
    >
      Funding
    </h1>
    <p
      class="mt-2 text-4xl font-bold tracking-tight text-slate-900 dark:text-slate-100 sm:text-5xl"
    >
      Your grant
    </p>
  </div>
  <p
    class="mx-auto mt-6 max-w-2xl text-center text-lg leading-8 text-slate-600 dark:text-slate-400"
  >
    We combine funding and support to help you to get started or grow. Depending
    on your stage of development we can offer up to £18,000.
  </p>

  <div
    class="isolate mx-auto mt-10 grid max-w-md grid-cols-1 gap-8 md:max-w-2xl md:grid-cols-2 lg:max-w-4xl xl:mx-0 xl:max-w-none xl:grid-cols-2"
  >
    {
      grants.map((grant) => (
        <div class="rounded-3xl p-8 ring-1 ring-slate-300 dark:ring-slate-700 flex flex-col gap-10">
          <div>
            <h2
              id="tier-hobby"
              class="text-lg font-semibold leading-8 text-slate-900 dark:text-slate-100"
            >
              {grant.name}
            </h2>
            <p class="mt-4 text-sm leading-6 text-slate-600 dark:text-slate-400">
              {grant.description}
            </p>
          </div>

          <p class="flex flex-col items-baseline gap-x-1">
            <span class="text-sm font-semibold leading-6 text-slate-600 dark:text-slate-400">
              Up to
            </span>
            <span class="text-4xl font-bold tracking-tight text-slate-900 dark:text-slate-100">
              £{grant.amount}
            </span>
          </p>

          <div class="flex flex-col gap-3">
            {grant.features.map((item) => (
              <div>
                <p
                  class={`truncate text-base font-medium text-slate-600 dark:text-slate-400 flex gap-2 items-center`}
                >
                  <i
                    class={`${item.icon} text-slate-600 dark:text-slate-400`}
                  />
                  <span class="text-slate-00 dark:text-slate-300">
                    {item.name}
                  </span>
                </p>
              </div>
            ))}
          </div>

          <div class="flex flex-col gap-6">
            <p class="text-sm text-slate-800 dark:text-slate-200">
              Your business eligibility:
            </p>
            {grant.eligibility.map((item) => (
              <div>
                <p
                  class={`truncate text-xs font-medium text-slate-600 dark:text-slate-400 uppercase flex gap-2 items-center`}
                >
                  <i
                    class={`${item.icon} text-slate-600 dark:text-slate-400`}
                  />
                  <span>{item.name}</span>
                </p>
                <p
                  class={`mt-1 text-sm font-semibold tracking-tight text-slate-700 dark:text-slate-300`}
                >
                  {item.value}
                </p>
              </div>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</div>
