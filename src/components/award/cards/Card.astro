---
const { url, border, divide } = Astro.props;

import Wrapper from "./Wrapper.astro";
---

<Wrapper url={url}>
  <div
    class={`col-span-1 divide-y ${divide} rounded-2xl shadow-md border-2 ${border} ${typeof url === "string" && url.length > 0 && `hover:shadow-xl transition ease-in-out delay-150  hover:-translate-y-2 duration-300`}`}
  >
    <slot />
  </div>
</Wrapper>
