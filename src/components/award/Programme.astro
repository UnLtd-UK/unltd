---
import truncate from "truncate";
const { image, icon, colour, name, blurb, slug, age, geography, sectors } =
  Astro.props;
---

<article
  class={`relative isolate flex flex-col gap-4 justify-end overflow-hidden rounded-2xl px-8 py-10 w-1/3 shadow-md`}
>
  <img
    src={`https://unltd.directus.app/assets/${image}`}
    alt=""
    class="absolute inset-0 -z-10 h-full w-full object-cover brightness-50 blur-xs opacity-30"
  />
  <div
    class={`absolute inset-0 -z-10 bg-gradient-to-t from-${colour}-700/80 to-${colour}-900/20`}
  >
  </div>
  <div class={`absolute inset-0 -z-10 rounded-2xl`}></div>

  <div>
    <span class="relative inline-block">
      <div
        class={`flex items-center justify-center h-14 w-14 rounded-md bg-${colour}-600`}
      >
        <i class={`${icon} text-${colour}-200 text-2xl`}></i>
      </div>
    </span>
    <h3 class={`mt-3 font-semibold leading-6 text-${colour}-50`}>
      <a href={`/award/${slug}`}>
        <span class="absolute inset-0"></span>
        <p class="text-lg">{name}</p>
      </a>
    </h3>
    <p class={`text-${colour}-100 text-sm`}>
      {truncate(blurb, 100)}
    </p>
  </div>

  <div class="flex flex-col gap-3">
    <div>
      <p class={`truncate text-xs font-medium text-${colour}-100 uppercase`}>
        <i class={`fa-solid fa-spinner text-${colour}-50`}></i>{" "}
        Age
      </p>
      <p
        class={`mt-1 text-base font-semibold tracking-tight text-${colour}-50`}
      >
        {age}
      </p>
    </div>
    <div>
      <p class={`truncate text-xs font-medium text-${colour}-100 uppercase`}>
        <i class={`fa-solid fa-location-dot text-${colour}-50`}></i>{" "}
        Geography
      </p>
      <p
        class={`mt-1 text-base font-semibold tracking-tight text-${colour}-50`}
      >
        {geography}
      </p>
    </div>
    <div>
      <p class={`truncate text-xs font-medium text-${colour}-100 uppercase`}>
        <i class={`fa-solid fa-vector-square text-${colour}-50`}></i>{" "}
        Sectors
      </p>
      <p
        class={`mt-1 text-base font-semibold tracking-tight text-${colour}-50`}
      >
        {sectors}
      </p>
    </div>
  </div>
</article>
