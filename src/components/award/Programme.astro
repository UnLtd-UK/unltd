---
import Card from "./cards/Card.astro";
const { image, icon, colour, name, slug, features, eligibilities } =
  Astro.props;

const title = {
  amber: "text-amber-100 dark:text-amber-100",
  blue: "text-blue-100 dark:text-blue-100",
  teal: "text-teal-100 dark:text-teal-100",
  purple: "text-purple-100 dark:text-purple-100",
  red: "text-red-100 dark:text-red-100",
  stone: "text-stone-100 dark:text-stone-100",
};

const skin = {
  amber: "text-amber-600 dark:text-amber-100 bg-amber-100 dark:bg-amber-600",
  blue: "text-blue-600 dark:text-blue-100 bg-blue-100 dark:bg-blue-600",
  teal: "text-teal-600 dark:text-teal-100 bg-teal-100 dark:bg-teal-600",
  purple:
    "text-purple-600 dark:text-purple-100 bg-purple-100 dark:bg-purple-600",
  red: "text-red-600 dark:text-red-100 bg-red-100 dark:bg-red-600",
  stone: "text-stone-600 dark:text-stone-100 bg-stone-100 dark:bg-stone-600",
};

const gradient = {
  amber: "from-amber-600/60",
  blue: "from-blue-600/60",
  teal: "from-teal-600/60",
  purple: "from-purple-600/60",
  red: "from-red-600/60",
  stone: "from-stone-600/60",
};

const tick = {
  amber: "text-amber-500 dark:text-amber-200",
  blue: "text-blue-500 dark:text-blue-200",
  teal: "text-teal-500 dark:text-teal-200",
  purple: "text-purple-500 dark:text-purple-200",
  red: "text-red-500 dark:text-red-200",
  stone: "text-stone-500 dark:text-stone-200",
};

const description = {
  amber: "text-amber-200",
  blue: "text-blue-200",
  teal: "text-teal-200",
  purple: "text-purple-200",
  red: "text-red-200",
  stone: "text-stone-200",
};

function isValidUrl(string) {
  try {
    new URL(string);
    return true;
  } catch (e) {
    return false;
  }
}
---

<Card url={slug && `/award/${slug}`}>
  <article
    class="relative isolate flex flex-col justify-end overflow-hidden rounded-t-2xl bg-slate-900 px-8 pb-8 pt-80 sm:pt-48 lg:pt-40"
  >
    <img
      src={isValidUrl(image)
        ? image
        : `https://unltd.directus.app/assets/${image}?width=384`}
      alt=""
      class="absolute inset-0 -z-10 h-full w-full object-cover brightness-50"
    />
    <div class={`absolute inset-0 -z-10 bg-gradient-to-tr ${gradient[colour]}`}>
    </div>
    <div
      class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-slate-900/10"
    >
    </div>
    <div class="flex flex-col gap-3">
      <span class="relative inline-block">
        <div
          class={`flex items-center justify-center h-14 w-14 rounded-md ${skin[colour]}`}
        >
          <i class={`${icon} text-2xl`}></i>
        </div>
      </span>
      <div class="flex flex-col gap-1">
        <h3 class={`text-base font-bold leading-6 ${title[colour]} `}>
          {name}
        </h3>
        <p class={`${description[colour]} text-sm font-semibold`}>
          Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
          eiusmod tempor incididunt ut labore et dolore magna aliqua.
        </p>
      </div>
    </div>
  </article>
  <div class="p-8 flex flex-col gap-6">
    <div class="flex flex-col gap-3">
      {
        features.map((feature) => (
          <div>
            <p class={`truncate text-sm font-medium flex gap-2 items-center`}>
              <i class={`${feature.icon} ${tick[colour]}`} />
              <span class={`text-slate-500 dark:text-slate-500`}>
                {feature.name}
              </span>
            </p>
          </div>
        ))
      }
    </div>
  </div>

  <div class={`flex flex-col gap-3 bg-slate-100 rounded-b-3xl p-8`}>
    <p class={`text-sm text-slate-600 dark:text-slate-200`}>
      Social Entrepreneur eligibility:
    </p>
    <ul class="flex flex-col gap-6">
      {
        eligibilities.map((eligibility) => (
          <li class="flex flex-col gap-1">
            <p
              class={`truncate text-xs font-medium uppercase flex gap-2 items-center`}
            >
              <i
                class={`${eligibility.icon} text-slate-600 dark:text-slate-500`}
              />
              <span class={`text-slate-600 dark:text-slate-200`}>
                {eligibility.name}
              </span>
            </p>
            <p class={`text-sm font-semibold tracking-tight text-slate-600`}>
              {eligibility.value}
            </p>
          </li>
        ))
      }
    </ul>
  </div>
</Card>
