<div x-data="{ open: false }" class="relative flex flex-col items-center">
  <button
    @click="open = !open"
    @click.away="open = false"
    class="px-4 py-2 text-white bg-blue-500 rounded-lg"
    aria-describedby="tooltipContent"
  >
    <slot />
  </button>
  <div
    x-show="open"
    x-transition
    class="absolute bottom-full mb-2 hidden w-48 p-2 text-sm text-white bg-black rounded-lg shadow-lg"
    id="tooltipContent"
  >
    {message}
  </div>
</div>
