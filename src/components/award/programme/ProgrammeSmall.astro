---
import Card from "../cards/Card.astro";
import Badge from "../cards/Badge.astro";
import { programmeColours } from "../../../data/programmeColours.js";

function isValidUrl(string) {
  try {
    new URL(string);
    return true;
  } catch (e) {
    return false;
  }
}

const {
  image,
  icon,
  colour,
  name,
  slogan,
  description,
  slug,
  services,
  eligibilities,
  logo,
} = Astro.props;
---

<Card
  url={slug && `/award/${slug}`}
  ring={programmeColours.ring[colour]}
  divide={programmeColours.divide[colour]}
>
  <article
    class="relative isolate flex flex-col justify-end overflow-hidden rounded-t-2xl px-8 pb-8 pt-80 sm:pt-48 lg:pt-40"
  >
    <img
      src={isValidUrl(image)
        ? image
        : `https://unltd.directus.app/assets/${image}?width=600`}
      alt=""
      class="absolute inset-0 -z-10 h-full w-full object-cover"
    />
    <div
      class={`absolute inset-0 -z-10 opacity-70 ${programmeColours.bg1[colour]}`}
    >
    </div>
    <div class="absolute inset-0 -z-10 rounded-t-2xl ring-1 ring-inset"></div>
    <div class="flex flex-col gap-3">
      <span class="relative inline-block">
        {
          typeof logo === "string" ? (
            <img
              class="inline-block h-14"
              src={`https://unltd.directus.app/assets/${logo}?width=384`}
              alt=""
            />
          ) : (
            <div
              class={`flex items-center justify-center h-16 w-16 rounded-md border shadow-2xl ${programmeColours.bg1[colour]} ${programmeColours.border[colour]}`}
            >
              <i class={`${icon} text-3xl ${programmeColours.text1[colour]}`} />
            </div>
          )
        }
      </span>
      <div class="flex flex-col gap-1">
        <h3
          class={`text-base font-bold leading-6 ${programmeColours.text1[colour]}`}
        >
          {name}
        </h3>
        <p class={`text-sm font-semibold ${programmeColours.text2[colour]}`}>
          {slogan}
        </p>
      </div>
    </div>
  </article>
  <div class={`p-8 flex flex-col gap-6 ${programmeColours.bg1[colour]}`}>
    <div class="flex flex-col gap-2">
      <div>
        <p class={`truncate text-xs font-medium flex gap-2 items-center`}>
          <i
            class={`fa-solid fa-universal-access ${programmeColours.text2[colour]}`}
          ></i>
          <span class={`${programmeColours.text1[colour]}`}
            >Everything in <Badge
              name="Core"
              colour="dark:bg-amber-400/10 dark:text-amber-400 dark:ring-amber-400/20"
            /></span
          >
        </p>
      </div>
      {
        services.map((service) => (
          <div>
            <p class={`truncate flex gap-2 items-center`}>
              <i
                class={`text-sm ${service.services_id.icon} ${programmeColours.text2[colour]}`}
              />
              <span
                class={`text-xs font-medium ${programmeColours.text1[colour]}`}
              >
                {service.services_id.name}
              </span>
            </p>
          </div>
        ))
      }
    </div>
  </div>

  <div
    class={`flex flex-col gap-3  rounded-b-2xl p-8 ${programmeColours.bg2[colour]}`}
  >
    <p class={`text-sm ${programmeColours.text1[colour]}`}>
      Social entrepreneur eligibility:
    </p>
    <ul class="flex flex-col gap-4">
      {
        eligibilities.map((eligibility) => (
          <li class="flex flex-col gap-1">
            <p class={`truncate text-xs uppercase flex gap-2 items-center`}>
              <i
                class={`${eligibility.eligibilities_id.icon} ${programmeColours.text2[colour]}`}
              />
              <span class={`${programmeColours.text2[colour]}`}>
                {eligibility.eligibilities_id.name}
              </span>
            </p>
            <p
              class={`text-sm font-medium tracking-tight ${programmeColours.text1[colour]}`}
            >
              {eligibility.eligibilities_id.description}
            </p>
          </li>
        ))
      }
    </ul>
  </div>
</Card>
