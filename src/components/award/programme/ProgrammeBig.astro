---
import { Image } from "astro:assets";
import { sesm } from "../../../data/sesm.js";
import { programmeColours } from "../../../data/programmeColours.js";

function isValidUrl(string) {
  try {
    new URL(string);
    return true;
  } catch (e) {
    return false;
  }
}

const {
  image,
  icon,
  colour,
  name,
  slogan,
  description,
  slug,
  services,
  eligibilities,
  logo,
} = Astro.props;
---

