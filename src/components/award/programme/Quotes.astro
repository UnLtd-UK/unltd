---
const { styles, quotes, programme } = Astro.props;
import Container from "@components/Container.astro";
---

<Container>
    <div class="mx-auto max-w-7xl px-6 lg:px-8 py-36">
        <div
            class="mx-auto grid max-w-2xl grid-cols-1 lg:mx-0 lg:max-w-none lg:grid-cols-2"
        >
            {
                quotes
                    .filter(
                        (quote) =>
                            quote.award_winner.programme.id === programme.id,
                    )
                    .map((quote) => (
                        <div class="flex flex-col pb-10 sm:pb-16 lg:pb-0 lg:pr-8 xl:pr-20">
                            <figure class="mt-10 flex flex-auto flex-col justify-between">
                                <blockquote
                                    class={`text-lg leading-8 ${styles.text}`}
                                >
                                    <p>{quote.body}</p>
                                </blockquote>
                                <figcaption class="mt-10 flex items-center gap-x-6">
                                    <div class="text-base">
                                        <div
                                            class={`font-semibold ${styles.text}`}
                                        >
                                            {quote.award_winner.person.name}
                                        </div>
                                        <div class={`mt-1 ${styles.text2}`}>
                                            {quote.award_winner.grant.name} |
                                            {quote.award_winner.programme.name}
                                        </div>
                                        <div class={`mt-1 ${styles.text2}`}>
                                            CEO of Tuple
                                        </div>
                                    </div>
                                </figcaption>
                            </figure>
                        </div>
                    ))
            }
        </div>
    </div>
</Container>
