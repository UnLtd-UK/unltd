---
import { programmeColours } from "../../../data/programmeColours.js";
const { partners, colour } = Astro.props;
---

<div class={`py-14`}>
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <h2
            class={`text-center text-lg font-semibold leading-8 ${programmeColours.text1[colour]}`}
        >
            Our funders and partners
        </h2>
        <div
            class="mx-auto mt-10 grid max-w-lg grid-cols-4 items-center gap-x-8 gap-y-10 sm:max-w-xl sm:grid-cols-6 sm:gap-x-10 lg:mx-0 lg:max-w-none lg:grid-cols-5"
        >
            {
                partners.map((partner) => (
                    <img
                        class="col-span-2 max-h-12 w-full object-contain lg:col-span-1"
                        src={`https://unltd.directus.app/assets/${partner.organisations_id.logo.id}`}
                        alt={partner.name}
                        width="158"
                        height="48"
                    />
                ))
            }
        </div>
    </div>
</div>
