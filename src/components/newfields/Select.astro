---
import slugify from "slugify";
const { name, type, required, options } = Astro.props;

const slug = slugify(name, {
  lower: true,
  strict: true,
  locale: "en",
  trim: true,
});
---

<div>
  <label for={name} class="block text-sm font-medium leading-6 text-slate-900"
    >{name}</label
  >
  <select
    id={slug}
    name={name}
    class="mt-2 block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-slate-900 ring-1 ring-inset ring-slate-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6"
    required={required}
  >
    {
      options.map((option, i) => (
        <option selected={i == 0 ? true : false}>{option.name}</option>
      ))
    }
  </select>
</div>
