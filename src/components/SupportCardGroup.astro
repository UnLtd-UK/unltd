---
import Icon from "@components/Icon.astro";
const { support, type } = Astro.props;
import groups from "@data/json/groups.json";

let group;

for (let index = 0; index < groups.length; index++) {
  if (support.group.id === groups[index].id) {
    group = groups[index];
  }
}
---

<div
  class="bg-white p-6 rounded-xl flex flex-col gap-2 text-violet-950 border border-amber-100 transition ease-in-out delay-50 duration-300 hover:-tranviolet-y-1 hover:scale-100"
>
  <div>
    <span
      class={`inline-flex items-center rounded-full bg-amber-100 px-2.5 py-0.5 text-xs font-medium text-amber-800 capitalize gap-1`}
    >
      <Icon name={type.icon} style="solid" />
      <p>{type.singular.name}</p>
    </span>
    <span
      class={`inline-flex items-center rounded-full bg-amber-100 px-2.5 py-0.5 text-xs font-medium text-amber-800 capitalize gap-1`}
    >
      <Icon name="star" style="solid" />
      <p>{group.name}</p>
    </span>
  </div>

  <p class="font-bold text-amber-800 text-xl">{group.name} Meet-up</p>
  <p class="text-sm">{support.location} | {support.duration} minutes</p>

  <div class="bg-violet-100 p-4 rounded-xl">
    <p class="text-sm font-bold">{group.name}</p>
    <p class="text-sm">{group.description}</p>
  </div>

  <div class="flex flex-row gap-10">
    <div class="flex flex-col">
      <p class="text-xs text-violet-500 uppercase">Schedule</p>
      <p class="text-xs font-bold capitalize">{support.schedule}</p>
    </div>

    <div class="flex flex-col">
      <p class="text-xs text-violet-500 uppercase">Attendees</p>
      <p class="text-xs font-bold capitalize">{support.fundee}</p>
    </div>

    <div class="flex flex-col">
      <p class="text-xs text-violet-500 uppercase">Fund</p>
      <p class="text-xs font-bold capitalize">{support.fund}</p>
    </div>

    <div class="flex flex-col">
      <p class="text-xs text-violet-500 uppercase">Countries</p>
      <p class="text-xs font-bold capitalize">{support.countries}</p>
    </div>
  </div>
</div>
