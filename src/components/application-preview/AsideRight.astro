---
const { pdf, docx, xlsx, slug } = Astro.props;
import Pop from "../Pop.astro";
---

<aside class="flex flex-col gap-7">
  {
    pdf && (
      <Pop
        name="Download application"
        icon="fa-solid fa-download"
        description=""
        buttons={[
          {
            name: "Download PDF",
            url: `https://unltd.directus.app/assets/${pdf}`,
            path: "",
            target: "_blank",
            description: "",
            icon: {
              position: 0,
              name: "fa-regular fa-arrow-down",
            },
          },
        ]}
      />
    )
  }{
    docx && (
      <Pop
        name="Download application"
        icon="fa-solid fa-download"
        description=""
        buttons={[
          {
            name: "Download DOCX",
            url: `https://unltd.directus.app/assets/${docx}`,
            path: "",
            target: "_blank",
            description: "Recommended for Microsoft Word",
            icon: {
              position: 0,
              name: "fa-regular fa-arrow-down",
            },
          },
        ]}
      />
    )
  }

  {
    xlsx && (
      <Pop
        name="Financial data guidance"
        icon="fa-solid fa-list"
        description=""
        buttons={[
          {
            name: "File uploads",
            description: "Section 6. Question 14",
            url: "",
            path: `/awards/application-preview/${slug}/s6/q14`,
            icon: {
              position: 1,
              name: "arrow-right",
            },
          },
        ]}
      />
    )
  }

  <Pop
    name="Help"
    icon="fa-regular fa-circle-question"
    description="Help with the application process is available for those with additional support needs."
    buttons={[
      {
        name: "Contact us",
        url: "",
        path: "/contact-us",
        description: "",
        icon: {
          position: 1,
          name: "fa-regular fa-arrow-right",
        },
      },
    ]}
  />
</aside>
