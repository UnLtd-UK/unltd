---
const { question, description, answer } = Astro.props;
---

<tr
  class="border-t border-gray-200 flex flex-row items-center p-5 justify-between gap-5"
>
  <th class="text-left text-sm font-normal text-gray-500" scope="row">
    <span class="font-medium text-gray-500">{question}</span><span
      class="font-normal text-gray-400 block w-60">{description}</span
    >
  </th>
  <td class="">
    <i class={`fa-solid fa-${answer == "No" ? `xmark` : `check`} text-gray-500`}
    ></i>
    <span class="sr-only">{answer}</span>
  </td>
</tr>
