---
const {
  name,
  icon,
  description = "",
  sections = [],
  buttons = [],
} = Astro.props;
import AButton from "./AButton.astro";
import Divider from "./Divider.astro";
---

<div class="px-5 flex flex-col gap-2">
  <div class="flex flex-row gap-2 items-center">
    <i class={`${icon}`}></i>
    <h3 class="text font-medium leading-6">{name}</h3>
  </div>

  <div class="gap-3 sm:flex flex-col sm:items-start sm:justify-between">
    <p class="text-xs font-medium leading-6">
      {description}
    </p>

    <div class="mt-5 sm:mt-0 sm:flex sm:flex-shrink-0 sm:items-center">
      <div class="flex flex-col gap-1">
        {
          buttons.map((button) => (
            <AButton
              name={button.name}
              href={button.path.length == 0 ? button.url : button.path}
              target={button.target && button.target}
              icon={button}
              description={button.description}
            />
          ))
        }
      </div>
    </div>
  </div>
</div>
