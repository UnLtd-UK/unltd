---
const { name, slug, children } = Astro.props;
import Button from "./Button.astro";
---

<Button name={name} slug={slug} />

<ul
  id={`dropdownContent-${slug}`}
  class="gap-4 p-3 bg-white text-black rounded-md absolute z-10 hidden border-violet-200 border shadow-lg"
  data-dropdown="dropdownContent"
>
  {
    children.map((navItem) => (
      <li>
        <a
          href={
            navItem.slug && !navItem.link
              ? `/${navItem.slug}`
              : `${navItem.link}`
          }
          target={!navItem.slug && navItem.link && "_blank"}
          class="flex flex-col p-3 py-3 hover:bg-violet-100 rounded-md"
          data-dropdown="dropdownA"
        >
          <span class="text-sm font-medium">{navItem.name}</span>
          {navItem.description && (
            <span class="text-xs text-gray-600">{navItem.description}</span>
          )}
          {!navItem.slug && navItem.link && (
            <i class="text-xs fa-solid fa-arrow-up-right-from-square" />
          )}
        </a>
      </li>
    ))
  }
</ul>
