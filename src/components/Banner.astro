---
const { banner } = Astro.props;
---

<div class="flex items-center justify-between gap-x-6 bg-violet-900 px-6 py-2.5 sm:pr-3.5 lg:pl-8">
  <p class="text-sm/6 text-violet-50">
    <a href={banner.link_url}>
      <strong class="font-semibold">{banner.body}</strong><svg viewBox="0 0 2 2" class="mx-2 inline size-0.5 fill-current" aria-hidden="true"><circle cx="1" cy="1" r="1" /></svg>{banner.link_text}<span aria-hidden="true"> &rarr;</span>
    </a>
  </p>
</div>